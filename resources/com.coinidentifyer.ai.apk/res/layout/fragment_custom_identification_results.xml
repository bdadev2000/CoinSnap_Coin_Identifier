<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_custom_identification_results_0"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/top_img_fl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x560"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/main_image_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/x68"
            android:layout_height="@dimen/x68"
            android:layout_marginTop="@dimen/x76"
            android:src="@drawable/icon_cms_detail_close"
            android:scaleType="centerCrop"
            android:layout_marginStart="@dimen/x20"/>
        <TextView
            android:textSize="@dimen/x24"
            android:textColor="#ffffff"
            android:layout_gravity="end|bottom"
            android:id="@+id/pager_index"
            android:background="@drawable/solid_88000000_r100"
            android:paddingTop="@dimen/x6"
            android:paddingBottom="@dimen/x6"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x82"
            android:minWidth="@dimen/x98"
            android:paddingStart="@dimen/x26"
            android:paddingEnd="@dimen/x26"
            android:layout_marginEnd="@dimen/x24"/>
    </FrameLayout>
    <View
        android:id="@+id/rv_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginBottom="@dimen/x60"
        app:layout_constraintBottom_toBottomOf="@+id/top_img_fl"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:transitionName="bottom_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_top">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/retake_ll"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x148"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:textSize="@dimen/x28"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/identifylist_no_correct_result"/>
            <com.google.android.material.button.MaterialButton
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/retake_tv"
                android:paddingTop="@dimen/x12"
                android:paddingBottom="@dimen/x12"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x60"
                android:text="@string/text_retake"
                android:paddingStart="@dimen/x30"
                android:paddingEnd="@dimen/x30"
                android:layout_marginStart="@dimen/x24"
                app:cornerRadius="?attr/appButtonCornerBig"
                style="@style/GlButtonStyle.small"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/solid_white_topcorner_18px"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/retake_ll"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="vertical"
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
