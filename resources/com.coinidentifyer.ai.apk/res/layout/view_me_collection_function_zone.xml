<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:tag="layout/view_me_collection_function_zone_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/x48"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_collections"
        android:layout_weight="1"/>
    <Space
        android:layout_width="@dimen/x20"
        android:layout_height="0dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_me_collection_search"
            android:layout_width="@dimen/x68"
            android:layout_height="@dimen/x68"
            android:src="@drawable/icon_me_collection_search"/>
        <Space
            android:layout_width="@dimen/x16"
            android:layout_height="0dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_me_collection_wish"
            android:layout_width="@dimen/x68"
            android:layout_height="@dimen/x68"
            android:src="@drawable/icon_me_collection_wish"/>
        <Space
            android:layout_width="@dimen/x16"
            android:layout_height="0dp"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_me_collection_history"
            android:layout_width="@dimen/x68"
            android:layout_height="@dimen/x68"
            android:src="@drawable/icon_me_collection_history"/>
        <Space
            android:layout_width="@dimen/x16"
            android:layout_height="0dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/x68"
            android:layout_height="@dimen/x68">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_me_collection_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icon_me_collection_settings"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="end"
                android:tag="binding_1"
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x16"
                android:src="@drawable/red_dot"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>
