<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/fragment_grading_loading_0"
    android:paddingTop="@dimen/x90"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="@dimen/x68"
        android:layout_height="@dimen/x68"
        android:src="@drawable/icon_close_x"
        android:layout_marginStart="@dimen/x32"/>
    <FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x200">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_gravity="center"
            android:id="@+id/iv_anim"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_enableMergePathsForKitKatAndAbove="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/grading_animation"
            app:lottie_speed="-2"/>
        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:layout_gravity="center"
            android:id="@+id/pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="1500"
            app:indicatorSize="@dimen/x250"/>
    </FrameLayout>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x130">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv1"
                android:visibility="gone"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@drawable/icon_check_down"/>
            <ProgressBar
                android:id="@+id/pb1"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"/>
            <TextView
                android:textSize="@dimen/x26"
                android:textColor="@color/gl_text_color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grading_text1"
                android:layout_marginStart="@dimen/x32"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x40">
            <ImageView
                android:id="@+id/iv2"
                android:visibility="gone"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@drawable/icon_check_down"/>
            <ProgressBar
                android:id="@+id/pb2"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"/>
            <TextView
                android:textSize="@dimen/x26"
                android:textColor="@color/gl_text_color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grading_text2"
                android:layout_marginStart="@dimen/x32"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x40">
            <ImageView
                android:id="@+id/iv3"
                android:visibility="gone"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@drawable/icon_check_down"/>
            <ProgressBar
                android:id="@+id/pb3"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"/>
            <TextView
                android:textSize="@dimen/x26"
                android:textColor="@color/gl_text_color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grading_text3"
                android:layout_marginStart="@dimen/x32"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x40">
            <ImageView
                android:id="@+id/iv4"
                android:visibility="gone"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@drawable/icon_check_down"/>
            <ProgressBar
                android:id="@+id/pb4"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"/>
            <TextView
                android:textSize="@dimen/x26"
                android:textColor="@color/gl_text_color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grading_text4"
                android:layout_marginStart="@dimen/x32"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
