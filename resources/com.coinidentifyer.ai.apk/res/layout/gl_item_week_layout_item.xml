<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/view_item_week_layout_item_container"
    android:background="@drawable/gl_bg_view_item_week_selected"
    android:paddingBottom="@dimen/x16"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="@dimen/x84">
    <TextView
        android:textSize="@dimen/x22"
        android:textColor="@color/gl_text_color3"
        android:id="@+id/week_day_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.glority.widget.GlTextView
        android:textSize="@dimen/x32"
        android:textColor="@color/gl_text_color1"
        android:id="@+id/week_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x2"
        app:medium_style="true"/>
    <ImageView
        android:id="@+id/tem_tag_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x12"
        android:src="@drawable/gl_view_item_week_layout_item_tag"/>
</LinearLayout>
