<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/view_me_collection_summary_melt_price_0"
    android:background="@drawable/shape_rect_solid_white_r_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/x32"
        android:paddingBottom="@dimen/x40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/x32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/x48"
                android:layout_height="@dimen/x48"
                android:src="@drawable/icon_me_collection_summary_melt_price"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/x36"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/collection_summary_melt"
                android:layout_marginStart="@dimen/x12"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_melt_price_info"
                android:layout_width="@dimen/x32"
                android:layout_height="@dimen/x32"
                android:src="@drawable/icon_me_collection_info"
                android:layout_marginStart="@dimen/x10"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_melt_price_more"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@drawable/icon_me_collection_summary_more"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x40"
            android:layout_marginBottom="@dimen/x16">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/x28"
                android:textColor="@color/Grey666666"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/collection_summary_melt_composition"
                android:layout_weight="2"
                android:lineHeight="@dimen/x32"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/x28"
                android:textColor="@color/Grey666666"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/collection_summary_melt_price"
                android:layout_weight="2"
                android:lineHeight="@dimen/x32"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/x28"
                android:textColor="@color/Grey666666"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/collection_summary_melt_weight"
                android:layout_weight="1.5"
                android:lineHeight="@dimen/x32"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_melt_price_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
