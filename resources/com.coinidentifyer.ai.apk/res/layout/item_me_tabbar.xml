<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_me_tabbar_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/x12">
    <HorizontalScrollView
        android:id="@+id/hsv"
        android:paddingTop="@dimen/x18"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">
        <LinearLayout
            android:id="@+id/hsv_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/all_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/x32"
                android:paddingEnd="@dimen/x12">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/all_ll"
                    android:background="?attr/meTabBgSelectedRes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/x36"
                    android:paddingVertical="@dimen/x14">
                    <TextView
                        android:textSize="@dimen/x32"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/all_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/myseries_btn_all"/>
                    <ImageView
                        android:id="@+id/al_iv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_white_vertical_divider"
                        android:layout_marginHorizontal="@dimen/x20"/>
                    <ImageView
                        android:id="@+id/al_iv2"
                        android:layout_width="@dimen/x36"
                        android:layout_height="@dimen/x36"
                        android:src="@drawable/icon_all_expand"/>
                </LinearLayout>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/custom_sets_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/x12">
                <TextView
                    android:textSize="@dimen/x32"
                    android:textStyle="bold"
                    android:textColor="@color/gl_text_color1"
                    android:id="@+id/custom_sets_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customseries_custom_series"
                    android:paddingHorizontal="@dimen/x36"
                    android:paddingVertical="@dimen/x14"/>
            </FrameLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x18"
        android:layout_marginHorizontal="@dimen/x28"
        app:dividerColor="#e4ede9"/>
</LinearLayout>
