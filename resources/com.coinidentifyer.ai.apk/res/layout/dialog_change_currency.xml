<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:tag="layout/dialog_change_currency_0"
    android:background="@drawable/gl_bottom_sheet_bg"
    android:paddingTop="@dimen/x50"
    android:paddingBottom="@dimen/x40"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/x40"
        android:textStyle="bold"
        android:textColor="@color/gl_text_color1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_personalization_option_preferredcurrency"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x40"
        android:layout_marginHorizontal="@dimen/x24">
        <LinearLayout
            android:gravity="center_vertical"
            android:background="@drawable/currency_search_bar_bg"
            android:layout_width="0dp"
            android:layout_height="@dimen/x80"
            android:layout_weight="1">
            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@drawable/icon_seach_zoom"
                android:layout_marginStart="@dimen/x24"/>
            <EditText
                android:textSize="@dimen/x32"
                android:textColorHint="@color/gl_text_color2"
                android:id="@+id/et"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/text_search"
                android:lines="1"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:layout_marginStart="@dimen/x4"/>
        </LinearLayout>
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x32"
            android:textColor="?attr/colorPrimary"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/text_cancel"
            android:paddingStart="@dimen/x32"
            app:medium_style="true"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/x24"
        android:minHeight="@dimen/x800"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
</LinearLayout>
