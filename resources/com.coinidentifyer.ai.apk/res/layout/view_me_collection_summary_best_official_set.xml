<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/view_me_collection_summary_best_official_set_0"
    android:background="@drawable/shape_rect_solid_white_r_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="@dimen/x32"
        android:paddingBottom="@dimen/x40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/x32"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/x48"
                android:layout_height="@dimen/x48"
                android:src="@drawable/icon_me_collection_summary_best_official_set"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/x36"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/collection_summary_bestofficial"
                android:layout_marginStart="@dimen/x12"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_more"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@drawable/icon_me_collection_summary_more"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/x28"
            android:textColor="@color/DarkGray"
            android:gravity="center_horizontal"
            android:id="@+id/tv_set_percentage_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x40"/>
        <FrameLayout
            android:tag="binding_1"
            android:background="@drawable/shape_rect_stroke_e6e6e6_w_x2_r_x24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/x40">
            <include
                android:id="@+id/official_set_progress_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/layout_official_set_progress_base_view"/>
        </FrameLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/x32"
            android:textColor="?attr/colorPrimary"
            android:gravity="center_horizontal"
            android:id="@+id/tv_check_all_official_set"
            android:background="@drawable/shape_rect_stroke_43507b_w_x2_r_x8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/check_all_officical_btn"
            android:paddingHorizontal="@dimen/x32"
            android:paddingVertical="@dimen/x20"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
