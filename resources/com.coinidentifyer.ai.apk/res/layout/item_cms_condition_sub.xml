<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">
    <ImageView
        android:id="@+id/iv_conditions_icon"
        android:layout_width="@dimen/x52"
        android:layout_height="@dimen/x52"
        android:layout_marginTop="@dimen/x14"
        android:scaleType="fitXY"
        android:layout_marginStart="@dimen/x36"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_gravity="end|center_vertical"
        android:id="@+id/iv_conditions_arrow"
        android:visibility="gone"
        android:layout_width="@dimen/x14"
        android:layout_height="@dimen/x22"
        android:src="@drawable/icon_detail_arrows711"
        android:scaleType="fitXY"
        android:layout_marginEnd="@dimen/x36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.glority.android.cms.base.MarkdownTextView
        android:textStyle="bold"
        android:textColor="@color/DarkGray"
        android:ellipsize="end"
        android:id="@+id/tv_condition_key"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x14"
        android:maxLines="1"
        android:layout_marginStart="@dimen/x36"
        android:layout_marginEnd="@dimen/x36"
        app:layout_constraintEnd_toStartOf="@+id/iv_conditions_arrow"
        app:layout_constraintStart_toEndOf="@+id/iv_conditions_icon"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/NPText32"/>
    <com.glority.android.cms.base.MarkdownTextView
        android:textColor="@color/LightGray"
        android:id="@+id/tv_conditions_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x8"
        android:layout_marginStart="@dimen/x36"
        android:layout_marginEnd="@dimen/x36"
        app:layout_constraintEnd_toStartOf="@+id/iv_conditions_arrow"
        app:layout_constraintStart_toEndOf="@+id/iv_conditions_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_condition_key"
        style="@style/NPText32"/>
    <View
        android:background="#e1e4e6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginTop="@dimen/x14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_conditions_value"/>
</androidx.constraintlayout.widget.ConstraintLayout>
