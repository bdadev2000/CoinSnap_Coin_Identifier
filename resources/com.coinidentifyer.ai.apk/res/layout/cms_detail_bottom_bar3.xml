<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/ll_bottom"
    android:tag="layout/cms_detail_bottom_bar3_0"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:layout_constraintBottom_toBottomOf="parent">
    <com.glority.widget.GlDividerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x130"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:gravity="center"
            android:id="@+id/new_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:foreground="@drawable/ripple_r10"
            android:src="@drawable/icon_take_capture_circle"
            android:scaleType="centerInside"
            android:layout_weight="1"/>
        <ImageView
            android:gravity="center"
            android:id="@+id/share_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:foreground="@drawable/ripple_r10"
            android:src="@drawable/icon_circular_background_share"
            android:scaleType="centerInside"
            android:layout_weight="1"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_bt"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="@dimen/x92"
            android:text="@string/identify_result_add"
            android:layout_weight="4"
            android:layout_marginStart="@dimen/x32"
            android:layout_marginEnd="@dimen/x32"
            android:paddingHorizontal="@dimen/x6"
            app:cornerRadius="?attr/appButtonCornerBig"
            style="@style/GlButtonStyle.big"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20"/>
</LinearLayout>
