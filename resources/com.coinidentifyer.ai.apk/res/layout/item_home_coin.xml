<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/solid_white_r_12"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x368"
    android:foreground="@drawable/ripple_r10">
    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/x160"
        android:layout_marginTop="@dimen/x50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>
    <com.glority.widget.GlTextView
        android:textSize="@dimen/x32"
        android:textColor="#333333"
        android:gravity="center"
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x60"
        android:maxLines="2"
        android:layout_marginStart="@dimen/x36"
        android:layout_marginEnd="@dimen/x36"
        android:paddingHorizontal="@dimen/x20"
        app:autoSizeMaxTextSize="@dimen/x32"
        app:autoSizeMinTextSize="@dimen/x16"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_img"
        app:medium_style="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>
