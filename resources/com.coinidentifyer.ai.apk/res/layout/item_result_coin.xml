<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/x32"
    android:layout_marginHorizontal="@dimen/x24">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x16"
        android:foreground="@drawable/ripple_r10"
        app:cardCornerRadius="?attr/appCorner"
        app:cardElevation="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/item_ll"
            android:background="@drawable/bg_identify_results_best_match"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x240">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_img1"
                    android:layout_width="@dimen/x176"
                    android:layout_height="@dimen/x176"
                    android:layout_marginTop="@dimen/x15"
                    android:src="@drawable/icon_img_place_holder"
                    android:layout_marginEnd="@dimen/x16"
                    android:elevation="@dimen/x12"
                    app:shapeAppearance="@style/roundedCornerImageStyle36"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/iv_img2"
                    android:layout_width="@dimen/x176"
                    android:layout_height="@dimen/x176"
                    android:layout_marginTop="@dimen/x15"
                    android:src="@drawable/icon_img_place_holder"
                    android:layout_marginStart="@dimen/x16"
                    android:elevation="@dimen/x12"
                    app:shapeAppearance="@style/roundedCornerImageStyle36"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/title_ll"
                android:background="#feecc6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/x24"
                android:paddingVertical="@dimen/x12">
                <com.glority.widget.GlTextView
                    android:textSize="@dimen/x32"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:ellipsize="middle"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_weight="1"
                    android:lineSpacingMultiplier="1.3"
                    app:auto_resize="false"/>
                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:src="@drawable/icon_identification_results_4"
                    android:layout_marginStart="@dimen/x24"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <com.glority.widget.GlTextView
        android:textSize="@dimen/x28"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/best_match_tv"
        android:background="@drawable/bg_best_match"
        android:padding="@dimen/x12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/identifylist_best_match"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/x20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:medium_style="true"/>
    <ImageView
        android:id="@+id/index_iv"
        android:visibility="gone"
        android:layout_width="@dimen/x48"
        android:layout_height="@dimen/x56"
        android:layout_marginTop="@dimen/x40"
        android:src="@drawable/icon_identification_results_2"
        android:layout_marginStart="@dimen/x24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:medium_style="true"/>
</FrameLayout>
