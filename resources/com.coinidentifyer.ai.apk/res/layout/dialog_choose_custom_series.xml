<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/dialog_choose_custom_series_0"
    android:background="@drawable/gl_bottom_sheet_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/full_data_layout"
        android:paddingTop="@dimen/x32"
        android:paddingBottom="@dimen/x100"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/cancel_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_close_x"
                android:layout_marginStart="@dimen/x32"/>
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x40"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customseries_custom_series"
                android:layout_marginHorizontal="@dimen/x150"
                android:paddingHorizontal="@dimen/x32"/>
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x36"
                android:textColor="?attr/colorPrimary"
                android:layout_gravity="end"
                android:id="@+id/done_bt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:foreground="@drawable/ripple_r20_deep"
                android:maxWidth="@dimen/x150"
                android:text="@string/camera_text_done"
                android:maxLines="1"
                android:paddingEnd="@dimen/x32"
                app:auto_resize="true"
                app:medium_style="true"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x32"
                android:textColor="#6e737d"
                android:gravity="center_vertical"
                android:id="@+id/filter_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:foreground="@drawable/ripple_r20_deep"
                android:text="@string/Customseries_dateupdated"
                android:drawablePadding="@dimen/x12"
                android:paddingStart="@dimen/x32"
                app:auto_resize="false"
                app:drawableEndCompat="@drawable/icon_small_arrow_down"
                app:medium_style="true"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <com.google.android.material.button.MaterialButton
                android:textSize="@dimen/x28"
                android:layout_gravity="end|center_vertical"
                android:id="@+id/create_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Customseries_btn_createnow"
                android:textAllCaps="false"
                android:layout_marginEnd="@dimen/x32"
                android:letterSpacing="0"
                android:textFontWeight="600"
                app:cornerRadius="?attr/appButtonCornerBig"
                app:icon="?attr/add2IconRes"
                app:iconGravity="textStart"
                app:iconTint="@null"
                app:strokeColor="?attr/colorPrimary"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/x840"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>
    <include
        android:id="@+id/empty_layout"
        android:visibility="gone"
        layout="@layout/dialog_choose_custom_series_empty"/>
</FrameLayout>
