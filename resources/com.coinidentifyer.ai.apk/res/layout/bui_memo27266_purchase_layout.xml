<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.glority.widget.GlTextView
        android:textSize="@dimen/x36"
        android:textColor="#faaf19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bui_memo_27086_days_free"
        app:medium_style="true"/>
    <com.glority.widget.GlTextView
        android:textSize="@dimen/x36"
        android:textColor="#ffffff"
        android:id="@+id/info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x8"
        app:medium_style="true"/>
    <TextView
        android:textSize="@dimen/x44"
        android:textStyle="bold"
        android:textColor="@color/gl_text_color1"
        android:gravity="center"
        android:id="@+id/purchase_tv"
        android:background="@drawable/bui_memo27266_purchase_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x112"
        android:layout_marginTop="@dimen/x24"
        android:foreground="@drawable/ripple_rect_r_30dp"
        android:text="@string/base_widget_text_continue"/>
</LinearLayout>
