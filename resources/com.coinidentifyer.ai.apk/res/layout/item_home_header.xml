<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/cl_top_group"
        android:background="@drawable/solid_white_r_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x6"
        android:layout_marginEnd="@dimen/x6"
        android:elevation="@dimen/x4"
        android:paddingVertical="@dimen/x25"
        app:layout_constraintTop_toBottomOf="@+id/search_view">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foreground="@drawable/ripple_r10"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/x20"
            android:paddingVertical="@dimen/x8">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@drawable/icon_home_grading"
                    android:layout_width="@dimen/x144"
                    android:layout_height="@dimen/x144"/>
            </FrameLayout>
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x28"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/homepage_grading"
                android:maxLines="2"
                android:autoSizeMinTextSize="@dimen/x14"
                android:autoSizeMaxTextSize="@dimen/x28"
                app:medium_style="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_capture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foreground="@drawable/ripple_r10"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginEnd="@dimen/x30"
            android:paddingVertical="@dimen/x8">
            <ImageView
                android:background="@drawable/icon_home_camera"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/x144"/>
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x28"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_identify_my_coin"
                android:maxLines="2"
                android:autoSizeMinTextSize="@dimen/x14"
                android:autoSizeMaxTextSize="@dimen/x28"
                app:medium_style="true"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_vip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:foreground="@drawable/ripple_r10"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/x20"
            android:paddingVertical="@dimen/x8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ll_capture"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:background="@drawable/icon_home_collections"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/x144"/>
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x28"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_collections"
                android:lines="2"
                android:autoSizeMinTextSize="@dimen/x14"
                android:autoSizeMaxTextSize="@dimen/x28"
                app:medium_style="true"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
