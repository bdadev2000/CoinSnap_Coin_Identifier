<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/x10"
    android:layout_marginStart="@dimen/x10"
    android:layout_marginEnd="@dimen/x10">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/suggest_added_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundedCornerImageStyle12"/>
    <ImageView
        android:id="@+id/suggest_delete_picture"
        android:padding="@dimen/x8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_multi_image_delete"
        app:layout_constraintEnd_toEndOf="@+id/suggest_added_image"
        app:layout_constraintTop_toTopOf="@+id/suggest_added_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>
