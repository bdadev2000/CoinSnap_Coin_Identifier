<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_water"
        android:paddingTop="@dimen/x32"
        android:paddingBottom="@dimen/x32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">
        <TextView
            android:textColor="@color/DarkGray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_watering_frequency"
            android:maxLines="1"
            android:drawablePadding="@dimen/x20"
            android:layout_weight="3"
            android:drawableStart="@drawable/icon_watering_green"
            android:layout_marginStart="@dimen/x32"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/x10"
            android:autoSizeMaxTextSize="@dimen/x32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textColor="@color/LightGray"
            android:gravity="end|center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_frequency_water"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x2"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:drawablePadding="@dimen/x18"
            android:layout_weight="2"
            android:drawableEnd="@drawable/icon_detail_arrows711"
            android:layout_marginEnd="@dimen/x50"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/x10"
            android:autoSizeMaxTextSize="@dimen/x30"/>
    </LinearLayout>
    <View
        android:background="#e6e6e6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginStart="@dimen/x95"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_fertilize"
        android:paddingTop="@dimen/x32"
        android:paddingBottom="@dimen/x32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">
        <TextView
            android:textColor="@color/DarkGray"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/text_fertilizing_frequency"
            android:maxLines="1"
            android:drawablePadding="@dimen/x20"
            android:layout_weight="3"
            android:drawableStart="@drawable/icon_fertilizing_green"
            android:layout_marginStart="@dimen/x32"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/x10"
            android:autoSizeMaxTextSize="@dimen/x32"/>
        <TextView
            android:textColor="@color/LightGray"
            android:gravity="end|center_vertical"
            android:id="@+id/tv_frequency_fertilize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x2"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:drawablePadding="@dimen/x18"
            android:layout_weight="2"
            android:drawableEnd="@drawable/icon_detail_arrows711"
            android:layout_marginEnd="@dimen/x50"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="@dimen/x10"
            android:autoSizeMaxTextSize="@dimen/x30"/>
    </LinearLayout>
    <include layout="@layout/cms_separator"/>
</LinearLayout>
