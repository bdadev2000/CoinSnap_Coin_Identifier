<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/x44"
        android:textStyle="bold"
        android:textColor="@color/gl_text_color1"
        android:id="@+id/title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x48"
        android:text="Available series"
        android:layout_marginStart="@dimen/x32"
        app:layout_constraintEnd_toStartOf="@+id/option_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.glority.widget.GlTextView
        android:textSize="@dimen/x28"
        android:textColor="@color/gl_text_color3"
        android:id="@+id/option_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hide"
        android:drawableEnd="@drawable/icon_small_arrow_down"
        android:paddingHorizontal="@dimen/x32"
        app:layout_constraintBottom_toBottomOf="@+id/title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title_tv"
        app:medium_style="true"/>
    <View
        android:id="@+id/hight_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x16"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"/>
    <TextView
        android:id="@+id/desc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click to see details and create series."
        android:layout_marginHorizontal="@dimen/x32"
        app:layout_constraintTop_toBottomOf="@+id/hight_v"/>
</androidx.constraintlayout.widget.ConstraintLayout>
