<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/dialog_export_success_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/bg_ffffff_r12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x126">
        <ImageView
            android:layout_gravity="start"
            android:id="@+id/icon_close"
            android:padding="@dimen/x16"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:src="@drawable/ic_close_black"
            app:tint="#999999"/>
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x40"
            android:textColor="#222222"
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x100"
            android:text="@string/coinlist_exportsent_title_requestsent"
            android:layout_marginHorizontal="@dimen/x48"
            app:medium_style="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x48"
            android:layout_marginHorizontal="@dimen/x48">
            <ImageView
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/x12"
                android:layout_marginTop="@dimen/x16"
                android:src="@drawable/icon_black_dot"/>
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x32"
                android:textColor="@color/gl_text_color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coinlist_exportsent_caption_summary1"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/x16"
                android:lineHeight="@dimen/x44"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8"
            android:layout_marginHorizontal="@dimen/x48">
            <ImageView
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/x12"
                android:layout_marginTop="@dimen/x16"
                android:src="@drawable/icon_black_dot"/>
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x32"
                android:textColor="@color/gl_text_color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coinlist_exportsent_caption_summary2"
                android:includeFontPadding="false"
                android:layout_marginStart="@dimen/x16"
                android:lineHeight="@dimen/x44"/>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:textSize="@dimen/x32"
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x100"
            android:layout_marginTop="@dimen/x42"
            android:layout_marginBottom="@dimen/x60"
            android:text="@string/coinlist_exportsent_buttontext_gotit"
            android:layout_marginHorizontal="@dimen/x40"
            app:cornerRadius="?attr/appButtonCornerBig"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/x270"
        android:layout_height="@dimen/x270"
        android:src="@drawable/icon_export_success"/>
</FrameLayout>
