<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/bui_dialog_input_email_by_reminder_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_rect_solid_white_top_r_20"
        android:paddingBottom="@dimen/x80"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/x44"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginTop="@dimen/x60"
            android:layout_marginRight="@dimen/x60"
            android:text="@string/conversionpage_emailbox_title"/>
        <EditText
            android:textSize="@dimen/x32"
            android:textColor="#333333"
            android:id="@+id/et_email"
            android:background="@drawable/shape_solid_f5f5f5_r_8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x92"
            android:layout_marginTop="@dimen/x68"
            android:hint="@string/conversionpage_emailbox_inputbox"
            android:inputType="textEmailAddress"
            android:paddingStart="@dimen/x24"
            android:paddingEnd="@dimen/x24"
            android:layout_marginStart="@dimen/x32"
            android:layout_marginEnd="@dimen/x32"/>
        <TextView
            android:textSize="@dimen/x32"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_save"
            android:background="@drawable/bui_input_email_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x112"
            android:layout_marginTop="@dimen/x28"
            android:text="@string/conversionpage_emailbox_button"
            android:layout_marginStart="@dimen/x32"
            android:layout_marginEnd="@dimen/x32"/>
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x36"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_not_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x24"
            android:text="@string/conversionpage_emailbox_exit"
            android:layout_marginStart="@dimen/x32"
            android:layout_marginEnd="@dimen/x32"
            app:autoSizeMaxTextSize="@dimen/x36"
            app:autoSizeMinTextSize="@dimen/x30"
            app:autoSizeTextType="uniform"
            app:medium_style="true"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
