<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/x28"
        android:textColor="@color/gl_text_color2"
        android:id="@+id/selected_info_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x28"
        android:text="@string/identify_details_priceguide_tips"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/year_ll"
        android:background="@drawable/cms_graing_price_year_outline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x32"
        android:foreground="@drawable/ripple_r10"
        android:minHeight="@dimen/x96"
        android:paddingHorizontal="@dimen/x32">
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x32"
            android:textColor="@color/gl_text_color1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/x300"
            android:text="@string/identify_result_year"
            android:maxLines="3"
            app:auto_resize="true"/>
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x32"
            android:textStyle="bold"
            android:textColor="@color/gl_text_color1"
            android:gravity="end"
            android:id="@+id/year_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_weight="1"
            android:paddingStart="@dimen/x40"
            app:auto_resize="true"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_detail_arrows_black_right"
            android:layout_marginStart="@dimen/x32"/>
    </LinearLayout>
</LinearLayout>
