<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/widget_setting_item_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:foreground="?android:attr/selectableItemBackground"
        style="@style/SettingItem">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_icon"
            android:visibility="gone"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:src="0x7f080182"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_right_icon"
            app:layout_constraintStart_toEndOf="@+id/iv_icon"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/x32"
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:layout_gravity="start|center_vertical"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:lineSpacingExtra="@dimen/x6"
                android:layout_marginStart="@dimen/x24"
                android:layout_marginEnd="@dimen/x24"
                app:autoSizeMaxTextSize="@dimen/x32"
                app:autoSizeMinTextSize="@dimen/x10"
                app:autoSizeTextType="uniform"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/x28"
                android:textColor="#999999"
                android:gravity="center_vertical"
                android:layout_gravity="start|center_vertical"
                android:id="@+id/tv_subtitle"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:lineSpacingExtra="2dp"
                android:layout_marginStart="@dimen/x24"
                android:layout_marginEnd="@dimen/x24"
                app:autoSizeMaxTextSize="@dimen/x32"
                app:autoSizeMinTextSize="@dimen/x10"
                app:autoSizeTextType="uniform"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_right_icon"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_setting_more"
            android:layout_marginEnd="@dimen/x32"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:textSize="@dimen/x30"
            android:textColor="@color/LightGrey"
            android:id="@+id/tv_right_info"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iv_right_icon"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/bottom_line"
        android:background="@color/GreyE6E6E6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginStart="@dimen/x40"/>
</LinearLayout>
