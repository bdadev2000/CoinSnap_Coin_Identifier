<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/x32"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:paddingStart="@dimen/x32"
    android:paddingEnd="@dimen/x32">
    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/x136"
        android:layout_height="@dimen/x136"
        android:layout_marginBottom="@dimen/x32"
        app:layout_constraintBottom_toTopOf="@+id/divider_v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x32"
        android:layout_marginStart="@dimen/x24"
        android:layout_marginEnd="@dimen/x32"
        app:layout_constraintBottom_toTopOf="@+id/divider_v"
        app:layout_constraintEnd_toStartOf="@+id/iv1"
        app:layout_constraintStart_toEndOf="@+id/iv"
        app:layout_constraintTop_toTopOf="parent">
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x32"
            android:textColor="@color/gl_text_color1"
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:auto_resize="false"
            app:medium_style="true"/>
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x28"
            android:textColor="@color/gl_text_color3"
            android:id="@+id/desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8"
            android:maxLines="1"
            app:auto_resize="false"
            app:medium_style="true"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv1"
        android:layout_width="@dimen/x32"
        android:layout_height="@dimen/x32"
        android:layout_marginBottom="@dimen/x32"
        android:src="@drawable/gl_icon_list_arrow"
        app:layout_constraintBottom_toTopOf="@+id/divider_v"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:id="@+id/divider_v"
        android:layout_width="0dp"
        android:layout_height="@dimen/x2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv"/>
</androidx.constraintlayout.widget.ConstraintLayout>
