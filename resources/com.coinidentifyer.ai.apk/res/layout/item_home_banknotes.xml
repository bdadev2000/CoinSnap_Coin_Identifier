<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/x24">
    <androidx.cardview.widget.CardView
        android:id="@+id/ll_banknote_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x32"
        android:foreground="@drawable/ripple_r10"
        android:elevation="0dp"
        app:cardCornerRadius="?attr/appCorner"
        app:cardElevation="0dp">
        <LinearLayout
            android:gravity="center_vertical"
            android:background="@drawable/bg_home_banknotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/x112">
            <TextView
                android:textSize="@dimen/x32"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Special Offer for Banknotes"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/x24"
                android:layout_marginEnd="@dimen/x24"/>
            <ImageView
                android:layout_width="@dimen/x142"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_banknotes"
                android:adjustViewBounds="true"
                android:layout_marginEnd="@dimen/x24"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
