<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/fragment_delete_account_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/navi_bar"
        layout="@layout/layout_toolbar"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="?attr/appCorner"
        app:cardUseCompatPadding="true"
        app:elevation="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:src="@drawable/icon_delete_account"/>
            <TextView
                android:textSize="@dimen/x28"
                android:textColor="@color/Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x70"
                android:text="@string/data_management_text_delete_account_tip"
                android:lineSpacingExtra="3dp"
                android:layout_marginStart="@dimen/x32"
                android:layout_marginEnd="@dimen/x32"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_confirm_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x50"
                android:layout_marginStart="@dimen/x32">
                <ImageView
                    android:id="@+id/iv_checked"
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/x32"
                    android:src="@drawable/icon_iknow_hold"
                    android:layout_marginEnd="@dimen/x12"
                    app:tint="?attr/colorPrimary"/>
                <TextView
                    android:textSize="@dimen/x26"
                    android:textColor="@color/Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/data_management_text_yes_i_know"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x80"
                android:layout_marginBottom="@dimen/x120"
                android:layout_marginStart="@dimen/x32"
                android:layout_marginEnd="@dimen/x32">
                <TextView
                    android:textSize="@dimen/x30"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:gravity="center"
                    android:id="@+id/tv_cancel"
                    android:background="@drawable/shape_rect_stroke_theme_r_100"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x80"
                    android:layout_margin="@dimen/x20"
                    android:text="@string/text_cancel"
                    android:layout_weight="1"/>
                <TextView
                    android:textSize="@dimen/x30"
                    android:textStyle="bold"
                    android:textColor="@color/DarkGrey"
                    android:gravity="center"
                    android:id="@+id/tv_delete"
                    android:background="@drawable/shape_rect_stroke_333333_r_100"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x80"
                    android:layout_margin="@dimen/x20"
                    android:text="@string/text_delete"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
