<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/to_series_ll"
        android:background="@drawable/bg_collection_series"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x32"
        android:foreground="@drawable/ripple_r20_deep"
        android:layout_marginHorizontal="@dimen/x32">
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x36"
            android:textStyle="bold"
            android:textColor="@color/gl_text_color1"
            android:gravity="center_vertical"
            android:id="@+id/series_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x32"
            android:maxWidth="@dimen/x420"
            android:text="@string/offseries_entry_title"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:drawableEnd="@drawable/gl_icon_list_arrow"
            android:layout_marginStart="@dimen/x32"
            android:drawableTint="#8f949a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x24"
            android:textColor="#6e737d"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x12"
            android:maxWidth="@dimen/x420"
            android:text="@string/offseries_entry_subtitle"
            android:maxLines="1"
            android:layout_marginStart="@dimen/x32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/series_name_tv"
            app:medium_style="true"/>
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/x162"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/x38"
            android:src="@drawable/icon_collection_series_coin"
            android:adjustViewBounds="true"
            android:layout_marginEnd="@dimen/x32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
