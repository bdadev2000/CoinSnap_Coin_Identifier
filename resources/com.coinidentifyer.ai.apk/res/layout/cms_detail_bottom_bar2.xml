<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:id="@+id/ll_bottom"
    android:tag="layout/cms_detail_bottom_bar2_0"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:layout_constraintBottom_toBottomOf="parent">
    <com.glority.widget.GlDividerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x130"
        android:paddingStart="@dimen/x80"
        android:paddingEnd="@dimen/x80">
        <ImageView
            android:gravity="center"
            android:id="@+id/new_iv"
            android:paddingTop="@dimen/x17"
            android:paddingBottom="@dimen/x17"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:foreground="@drawable/ripple_r10"
            android:src="@drawable/icon_idnew"
            android:scaleType="centerInside"
            android:layout_weight="1"/>
        <ImageView
            android:gravity="center"
            android:id="@+id/wish_iv"
            android:paddingTop="@dimen/x22"
            android:paddingBottom="@dimen/x22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:foreground="@drawable/ripple_r10"
            android:src="@drawable/icon_unwish"
            android:scaleType="centerInside"
            android:layout_weight="1"/>
        <ImageView
            android:gravity="center"
            android:id="@+id/share_iv"
            android:paddingTop="@dimen/x22"
            android:paddingBottom="@dimen/x22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:foreground="@drawable/ripple_r10"
            android:src="@drawable/icon_detail_share"
            android:scaleType="centerInside"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20"/>
</LinearLayout>
