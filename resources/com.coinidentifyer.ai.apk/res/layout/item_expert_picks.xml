<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_expert_picks_0"
    android:background="@drawable/bg_ffffff_r12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/x24"
    android:layout_marginHorizontal="@dimen/x24">
    <HorizontalScrollView
        android:id="@+id/image_hsv"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x240"
        android:layout_marginTop="@dimen/x32">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/image_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </HorizontalScrollView>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x40"
        android:layout_marginStart="@dimen/x24">
        <ImageView
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x48"
            android:src="@drawable/icon_coinsnap_expert"/>
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_expertpicks_caption_expert"
            android:layout_marginStart="@dimen/x12"
            app:medium_style="true"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/tag_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:paddingHorizontal="@dimen/x24"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/x28"
            android:textColor="@color/gl_text_color1"
            android:id="@+id/content_tv"
            android:paddingBottom="@dimen/x32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x20"
            android:lineSpacingMultiplier="1.3"
            android:paddingHorizontal="@dimen/x24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <FrameLayout
            android:id="@+id/lock_mask_fl"
            android:background="@drawable/gradient_00ffffff_ffffffff"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/content_tv"
            app:layout_constraintEnd_toEndOf="@+id/content_tv"
            app:layout_constraintStart_toStartOf="@+id/content_tv"
            app:layout_constraintTop_toTopOf="@+id/content_tv">
            <com.google.android.material.button.MaterialButton
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/lock_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x40"
                android:minWidth="@dimen/x240"
                android:text="@string/camera_text_unlock"
                app:cornerRadius="?attr/appButtonCornerBig"
                style="@style/GlButtonStyle.medium"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
