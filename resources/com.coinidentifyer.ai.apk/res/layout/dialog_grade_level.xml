<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/dialog_grade_level_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/gl_bottom_sheet_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x36"
                android:textColor="@color/gl_text_color1"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/collection_detail_add_grade"
                android:layout_marginStart="@dimen/x78"
                android:paddingVertical="@dimen/x28"
                app:layout_constraintEnd_toStartOf="@+id/iv_close"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:medium_style="true"/>
            <ImageView
                android:id="@+id/iv_close"
                android:padding="@dimen/x10"
                android:layout_width="@dimen/x66"
                android:layout_height="@dimen/x66"
                android:src="@drawable/ic_close_black"
                android:layout_marginEnd="@dimen/x32"
                app:layout_constraintBottom_toBottomOf="@+id/title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="vertical"
                android:id="@+id/name_rv"
                android:background="#efefef"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="233"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <androidx.recyclerview.widget.RecyclerView
                android:orientation="vertical"
                android:id="@+id/level_rv"
                android:background="#f8f8f8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="142"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:enabled="false"
            android:id="@+id/save_bt"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x80"
            android:layout_marginTop="@dimen/x40"
            android:text="@string/collection_detail_popup_save"
            android:layout_marginStart="@dimen/x40"
            android:layout_marginEnd="@dimen/x40"
            app:cornerRadius="?attr/appButtonCornerBig"
            style="@style/GlButtonStyle.big"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
