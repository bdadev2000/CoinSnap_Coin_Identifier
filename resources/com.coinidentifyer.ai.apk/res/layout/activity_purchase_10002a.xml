<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/activity_purchase_10002a_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_purchase_10002a"
        android:scaleType="centerCrop"/>
    <ImageView
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x100"
        android:src="@drawable/bg_purchase_10002"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/x450"
        android:src="@drawable/bg_linear_000000_ffffff"/>
    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x60"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x600"
                android:text="@string/coinlist_exportconversion_title_summary"
                android:maxLines="3"
                android:layout_marginHorizontal="@dimen/x48"/>
            <com.glority.widget.GlTextView
                android:textColor="#85ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:text="@string/coinlist_exportconversion_caption_morefeature"
                android:layout_marginHorizontal="@dimen/x48"
                app:medium_style="true"/>
            <com.glority.base.widget.AutoPollRecyclerView
                android:orientation="horizontal"
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x22"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
            <com.glority.widget.purchase.purchase.GlPurchaseView3
                android:id="@+id/gpv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x60"/>
            <com.glority.widget.purchase.policy.GlPolicyView1
                android:id="@+id/gpv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x60"
                android:layout_marginHorizontal="@dimen/x32"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:textSize="@dimen/x32"
        android:textColor="#545454"
        android:id="@+id/tv_restore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x60"
        android:text="@string/bui_text_restore"
        android:layout_marginStart="@dimen/x32"/>
    <TextView
        android:textSize="@dimen/x32"
        android:textColor="#545454"
        android:layout_gravity="end"
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x60"
        android:text="@string/text_cancel"
        android:layout_marginEnd="@dimen/x32"/>
</FrameLayout>
