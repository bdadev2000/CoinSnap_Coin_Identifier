<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_disease_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">
    <include layout="@layout/cms_separator"/>
    <include
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x48"
        android:layout_marginStart="@dimen/x36"
        android:layout_marginEnd="@dimen/x36"
        layout="@layout/cms_common_title"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginBottom="@dimen/x30">
        <com.glority.android.cms.base.MarkdownTextView
            android:textSize="@dimen/x30"
            android:textColor="@color/Gray"
            android:gravity="start"
            android:id="@+id/tv_diseases_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginStart="@dimen/x36"
            android:layout_marginEnd="@dimen/x36"/>
        <ImageView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/iv_diseases_arrow"
            android:visibility="gone"
            android:layout_width="@dimen/x14"
            android:layout_height="@dimen/x22"
            android:src="@drawable/icon_detail_arrows711"
            android:scaleType="fitXY"
            android:layout_marginEnd="@dimen/x36"/>
    </LinearLayout>
</LinearLayout>
