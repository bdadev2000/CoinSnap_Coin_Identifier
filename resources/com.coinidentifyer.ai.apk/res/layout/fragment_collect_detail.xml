<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_collect_detail_0"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x600">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:fitsSystemWindows="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_scrollFlags="exitUntilCollapsed|scroll">
                    <ImageView
                        android:id="@+id/header_iv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>
            <com.glority.android.cmsui2.view.CmsView
                android:id="@+id/cms_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                app:layout_constraintBottom_toTopOf="@+id/bottom_bar"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_close"
            android:tag="binding_1"
            android:layout_width="@dimen/x68"
            android:layout_height="@dimen/x68"
            android:layout_marginTop="@dimen/x76"
            android:src="@drawable/icon_cms_detail_back"
            android:layout_marginStart="@dimen/x20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="@dimen/x68"
            android:layout_height="@dimen/x68"
            android:layout_marginTop="@dimen/x76"
            android:src="@drawable/icon_ios_more"
            android:scaleType="center"
            android:layout_marginEnd="@dimen/x20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/Black"/>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/app_bar_layout"
            android:background="@color/white"
            android:paddingTop="@dimen/x76"
            android:paddingBottom="@dimen/x30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0"
            android:paddingStart="@dimen/x20"
            android:paddingEnd="@dimen/x20"
            android:elevation="@dimen/x10"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/iv_close2"
                android:layout_width="@dimen/x68"
                android:layout_height="@dimen/x68"
                android:foreground="@drawable/item_background_borderless_material"
                android:src="@drawable/arrow_back_black"
                android:scaleType="center"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:ellipsize="end"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/x32"
                android:layout_marginEnd="@dimen/x32"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"/>
            <ImageView
                android:id="@+id/iv_share2"
                android:layout_width="@dimen/x68"
                android:layout_height="@dimen/x68"
                android:foreground="@drawable/item_background_borderless_material"
                android:src="@drawable/icon_ios_more"
                android:scaleType="center"
                app:tint="@color/Black"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x150"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <FrameLayout
            android:id="@+id/progress_fl"
            android:background="@color/White"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x700"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
