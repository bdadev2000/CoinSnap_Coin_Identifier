<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/x40"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/x40"
        android:paddingEnd="@dimen/x40">
        <ImageView
            android:id="@+id/iv"
            android:visibility="gone"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x48"
            android:layout_marginEnd="@dimen/x16"/>
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x36"
            android:textColor="@color/gl_text_color1"
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:medium_style="true"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:paddingStart="@dimen/x40"
        android:paddingEnd="@dimen/x40"/>
    <View
        android:id="@+id/divider_v"
        android:background="@color/gl_divider_color"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20"
        android:layout_marginTop="@dimen/x40"/>
</LinearLayout>
