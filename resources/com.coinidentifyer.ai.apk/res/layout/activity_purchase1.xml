<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/activity_purchase1_0"
    android:background="#88000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/x30">
    <ScrollView
        android:layout_gravity="center"
        android:id="@+id/sv"
        android:background="@drawable/bg_purchase1"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/x64"
                android:textStyle="bold"
                android:textColor="#c9841d"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x80"
                android:text="@string/identifyresult_addtocollectionlimit_title_unlockcollection"
                android:layout_marginHorizontal="@dimen/x60"/>
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x36"
                android:textStyle="italic|bold"
                android:textColor="#d7a134"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x24"
                android:text="@string/identifyresult_addtocollectionlimit_text_outofstorage"/>
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x28"
                android:textColor="#979797"
                android:id="@+id/count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                android:text="@string/identifyresult_addtocollectionlimit_text_coinscollected"
                android:alpha="0.6"
                app:medium_style="true"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x40">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_purchase1_check"
                        android:elevation="@dimen/x5"/>
                    <com.glority.widget.GlTextView
                        android:textSize="@dimen/x32"
                        android:textColor="#121212"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/identifyresult_addtocollectionlimit_text_unlimitedcollections"
                        android:layout_marginStart="@dimen/x20"
                        app:medium_style="true"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x32">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_purchase1_check"
                        android:elevation="@dimen/x5"/>
                    <com.glority.widget.GlTextView
                        android:textSize="@dimen/x32"
                        android:textColor="#121212"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/identifyresult_addtocollectionlimit_text_unlimitedidentifications"
                        android:layout_marginStart="@dimen/x20"
                        app:medium_style="true"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x32">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_purchase1_check"
                        android:elevation="@dimen/x5"/>
                    <com.glority.widget.GlTextView
                        android:textSize="@dimen/x32"
                        android:textColor="#121212"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/convert_noads"
                        android:layout_marginStart="@dimen/x20"
                        app:medium_style="true"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x32">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_purchase1_check"
                        android:elevation="@dimen/x5"/>
                    <com.glority.widget.GlTextView
                        android:textSize="@dimen/x32"
                        android:textColor="#121212"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/identifyresult_addtocollectionlimit_text_explorenewfeatures"
                        android:layout_marginStart="@dimen/x20"
                        app:medium_style="true"/>
                </LinearLayout>
            </LinearLayout>
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x32"
                android:textColor="#314d46"
                android:id="@+id/year_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x42"
                app:medium_style="true"/>
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x26"
                android:textColor="#314d46"
                android:id="@+id/day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                app:medium_style="true"/>
            <androidx.appcompat.widget.AppCompatButton
                android:textSize="@dimen/x60"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/continue_tv"
                android:background="@drawable/bg_purchase1_bt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x122"
                android:layout_marginTop="@dimen/x24"
                android:text="@string/text_continue"
                android:textAllCaps="false"
                android:elevation="@dimen/x20"
                android:letterSpacing="0"
                android:layout_marginHorizontal="@dimen/x56"/>
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x40"
                android:textStyle="bold"
                android:textColor="#b5b5b5"
                android:id="@+id/give_up_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x28"
                android:text="@string/identifyresult_addtocollectionlimit_buttontext_giveup"
                app:medium_style="true"/>
            <TextView
                android:textSize="@dimen/x20"
                android:textColor="@color/gl_text_color3"
                android:id="@+id/policy_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x26"
                android:text="@string/vip_bottom_tip_content_google"
                android:maxLines="1"
                android:layout_marginHorizontal="@dimen/x32"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
