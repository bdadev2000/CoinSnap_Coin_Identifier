<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/ll_weekly"
        android:layout_width="@dimen/x176"
        android:layout_height="@dimen/y228"
        android:layout_marginTop="@dimen/y30"
        android:foreground="@drawable/ripple_rect_r_10dp">
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x28"
            android:textStyle="bold"
            android:textColor="@color/gl_text_color5"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/weekly_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y28"
            android:text="@string/base_widget_text_weekly"
            android:maxLines="1"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/x28"
            android:textColor="@color/gl_text_color5"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_weekly_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y102"
            android:includeFontPadding="false"
            android:fontFamily="@string/Roboto_Regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x24"
            android:textColor="#909090"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/billed_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y14"
            android:text="@string/base_widget_text_billed_weekly"
            android:maxLines="2"
            android:includeFontPadding="false"
            android:fontFamily="@string/Roboto_Regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/ll_7_day_free"
        android:layout_width="@dimen/x246"
        android:layout_height="@dimen/y290"
        android:foreground="@drawable/ripple_rect_r_10dp"
        android:layout_marginStart="@dimen/x14"
        android:layout_marginEnd="@dimen/x14">
        <TextView
            android:textSize="@dimen/x24"
            android:textStyle="bold"
            android:textColor="#252525"
            android:gravity="center"
            android:id="@+id/tv_special_offer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x28"
            android:layout_marginTop="@dimen/x6"
            android:text="@string/base_widget_text_most_popular"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x28"
            android:textStyle="bold"
            android:textColor="#00ffb9"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_7_day_free_trial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y58"
            android:text="@string/base_widget_text_3_day_free_trial"
            android:maxLines="2"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x28"
            android:textColor="@color/gl_text_color5"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_then_year_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y142"
            android:text="@string/base_widget_text_then_s"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:fontFamily="@string/Roboto_Regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/x28"
            android:textStyle="bold"
            android:textColor="#252525"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_continue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y54"
            android:layout_marginTop="@dimen/y186"
            android:text="@string/base_widget_text_continue"
            android:fontFamily="@string/Roboto_Black"
            android:layout_marginStart="@dimen/x24"
            android:layout_marginEnd="@dimen/x24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x24"
            android:textColor="#909090"
            android:gravity="center_horizontal"
            android:id="@+id/billed_yearly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y14"
            android:text="@string/base_widget_text_billed_yearly"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:fontFamily="@string/Roboto_Regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/ll_monthly"
        android:layout_width="@dimen/x176"
        android:layout_height="@dimen/y228"
        android:layout_marginTop="@dimen/y30"
        android:foreground="@drawable/ripple_rect_r_10dp">
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x28"
            android:textStyle="bold"
            android:textColor="@color/gl_text_color5"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/monthly_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y28"
            android:text="@string/base_widget_text_monthly"
            android:maxLines="1"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/x28"
            android:textColor="@color/gl_text_color5"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_monthly_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y102"
            android:includeFontPadding="false"
            android:fontFamily="@string/Roboto_Regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x24"
            android:textColor="#909090"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/billed_monthly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y14"
            android:text="@string/base_widget_text_billed_monthly"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:fontFamily="@string/Roboto_Regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
