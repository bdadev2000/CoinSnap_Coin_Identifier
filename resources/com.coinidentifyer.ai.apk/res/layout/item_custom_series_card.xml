<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:tag="layout/item_custom_series_card_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ripple_r10"
    android:layout_marginHorizontal="@dimen/x32"
    android:layout_marginVertical="@dimen/x12"
    android:outlineSpotShadowColor="@color/gl_text_color3"
    app:cardCornerRadius="@dimen/x24"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:tag="binding_1"
        android:padding="@dimen/x32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/ic_series_folder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            layout="@layout/view_series_collection_folder_layout"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/x32"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ic_series_folder"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/x36"
                android:textStyle="bold"
                android:textColor="@color/gl_text_color1"
                android:ellipsize="end"
                android:id="@+id/tv_me_series_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lineSpacingExtra="2dp"
                android:layout_marginEnd="@dimen/x60"
                android:lineHeight="@dimen/x44"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/x32"
                android:textColor="#43507b"
                android:id="@+id/count_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/x28"
                android:textColor="#6e737d"
                android:id="@+id/update_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x40"
                android:maxLines="1"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/iv_me_series_more"
            android:padding="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/ripple_r20_deep"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@drawable/icon_ios_more"
                android:scaleType="center"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
