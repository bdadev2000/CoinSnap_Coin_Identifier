<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:background="@drawable/gl_bottom_sheet_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x12">
            <ImageView
                android:id="@+id/back_iv"
                android:padding="@dimen/x40"
                android:layout_width="@dimen/x118"
                android:layout_height="@dimen/x118"
                android:foreground="@drawable/ripple_r10"
                android:src="@drawable/gl_icon_back"/>
            <TextView
                android:textSize="@dimen/x40"
                android:textStyle="bold"
                android:textColor="@color/gl_text_color1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/garde_feedback_Popups_choose5"/>
        </LinearLayout>
        <EditText
            android:textSize="@dimen/x28"
            android:gravity="top"
            android:id="@+id/notes_et"
            android:background="@drawable/rectangle_f8f8f8_solid"
            android:paddingTop="@dimen/x18"
            android:paddingBottom="@dimen/x18"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x268"
            android:layout_marginTop="@dimen/x12"
            android:hint="@string/grade_feedback_popups_paratext3"
            android:paddingStart="@dimen/x34"
            android:paddingEnd="@dimen/x34"
            android:layout_marginHorizontal="@dimen/x40"/>
        <com.google.android.material.button.MaterialButton
            android:enabled="false"
            android:id="@+id/submit_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x32"
            android:text="@string/text_submit"
            android:layout_marginHorizontal="@dimen/x40"
            app:cornerRadius="?attr/appButtonCornerBig"
            style="@style/GlButtonStyle.big"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x80"/>
    </LinearLayout>
</FrameLayout>
