<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:tag="layout/view_summary_geo_distribution_entry_layout_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_geo_distribution_country_flag"
        android:layout_width="@dimen/x36"
        android:layout_height="@dimen/x36"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/x32"
        android:textStyle="bold"
        android:textColor="@color/DarkGray"
        android:id="@+id/tv_geo_distribution_country_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/x12"
        android:lineHeight="@dimen/x36"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/x32"
        android:textStyle="bold"
        android:textColor="@color/Grey"
        android:id="@+id/tv_geo_distribution_coin_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineHeight="@dimen/x36"/>
</LinearLayout>
