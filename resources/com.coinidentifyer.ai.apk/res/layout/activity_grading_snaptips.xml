<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/activity_grading_snaptips_0"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="snap_tips">
    <LinearLayout
        android:orientation="vertical"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x36"
            android:textColor="@color/White"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x150"
            android:text="@string/grading_tips_title"
            android:layout_marginHorizontal="@dimen/x48"
            android:lineHeight="@dimen/x48"
            app:medium_style="true"/>
        <TextView
            android:textSize="@dimen/x32"
            android:textColor="#dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x48"
            android:text="@string/grade_guide_text1"
            android:layout_marginHorizontal="@dimen/x48"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x28"
            android:src="@drawable/icon_grading_snaptips_1"
            android:adjustViewBounds="true"
            android:layout_marginHorizontal="@dimen/x48"/>
        <TextView
            android:textSize="@dimen/x32"
            android:textColor="#dbdbdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x48"
            android:text="@string/grade_snaptips_secondtext"
            android:layout_marginHorizontal="@dimen/x48"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x28"
            android:src="@drawable/icon_grading_snaptips_2"
            android:adjustViewBounds="true"
            android:layout_marginHorizontal="@dimen/x48"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <com.google.android.material.button.MaterialButton
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x100"
            android:text="@string/snaptips_continue"
            android:layout_marginStart="@dimen/x68"
            android:layout_marginEnd="@dimen/x68"
            style="@style/GlButtonStyle.big"/>
    </LinearLayout>
</FrameLayout>
