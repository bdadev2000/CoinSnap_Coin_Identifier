<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:tag="layout/fragment_custom_home_0"
    android:background="#efefef"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/home_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x686"
        android:src="@drawable/gradient_ffe5b0_f5f5f5"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/search_view"
        android:background="@drawable/solid_white_r_23"
        android:layout_width="@dimen/x686"
        android:layout_height="@dimen/x80"
        android:layout_marginTop="@dimen/x72"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/x44"
            android:src="@drawable/icon_seach_zoom"/>
        <TextView
            android:textSize="@dimen/x32"
            android:textColor="@color/gl_text_color2"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_search"
            android:layout_marginStart="@dimen/x20"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x24"
        android:paddingStart="@dimen/x18"
        android:paddingEnd="@dimen/x18"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/search_view"/>
    <com.glority.android.picturexx.widget.ChatbotView
        android:id="@+id/chatbot_view"
        android:layout_width="@dimen/x160"
        android:layout_height="@dimen/x160"
        android:layout_marginBottom="@dimen/x200"
        android:src="?attr/chatbotIconRes"
        android:layout_marginEnd="@dimen/x16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
