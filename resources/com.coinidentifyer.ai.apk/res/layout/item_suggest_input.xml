<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:textSize="@dimen/x32"
        android:textColor="@color/DarkGray"
        android:id="@+id/input_common_name"
        android:background="@drawable/gl_bg_conner12_f5f6f7"
        android:padding="@dimen/x24"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:hint="Common name"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/delete_common_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/delete_common_name"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x40"
        android:src="@drawable/icon_suggest_common_name_delete"
        android:layout_marginStart="@dimen/x20"
        android:layout_marginEnd="@dimen/x12"
        app:layout_constraintBottom_toBottomOf="@+id/input_common_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/input_common_name"
        app:layout_constraintTop_toTopOf="@+id/input_common_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>
