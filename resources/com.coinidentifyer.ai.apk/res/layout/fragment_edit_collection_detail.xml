<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom"
    android:orientation="vertical"
    android:tag="layout/fragment_edit_collection_detail_0"
    android:background="@drawable/gl_bottom_sheet_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.glority.widget.GlTextView
            android:textSize="@dimen/x36"
            android:textColor="@color/gl_text_color1"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x28"
            android:text="@string/identify_result_add"
            android:layout_marginHorizontal="@dimen/x98"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:medium_style="true"/>
        <ImageView
            android:id="@+id/iv_close"
            android:padding="@dimen/x10"
            android:layout_width="@dimen/x66"
            android:layout_height="@dimen/x66"
            android:src="@drawable/ic_close_black"
            android:layout_marginStart="@dimen/x32"
            app:layout_constraintBottom_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/container_v"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:layout_marginStart="@dimen/x40"
                android:layout_marginEnd="@dimen/x40"
                app:layout_constraintTop_toTopOf="parent">
                <com.glority.widget.GlTextView
                    android:id="@+id/variety_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/ripple_r10"
                    android:text="@string/id_price_variety"
                    android:drawablePadding="@dimen/x4"
                    app:drawableEndCompat="@drawable/icon_tips"
                    app:medium_style="true"
                    style="@style/collectionDetailsLabelText"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/mint_mark_ll"
                    android:background="@drawable/rectangle_f8f8f8_solid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <com.glority.widget.GlTextView
                        android:textColor="@color/color_333333"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:id="@+id/variety_et"
                        android:longClickable="false"
                        android:layout_width="0dp"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:textIsSelectable="false"
                        android:layout_marginEnd="@dimen/x32"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/collectionDetailsEditText"/>
                    <ImageView
                        android:id="@+id/mintmark_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_more_12_arrow_down"
                        android:layout_marginEnd="@dimen/x32"/>
                </LinearLayout>
                <com.glority.widget.GlTextView
                    android:id="@+id/series_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/customseries__custom_set"
                    app:medium_style="true"
                    style="@style/collectionDetailsLabelText"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/series_ll"
                    android:background="@drawable/rectangle_f8f8f8_solid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/gl_text_color1"
                        android:textColorHint="@color/gl_text_color3"
                        android:id="@+id/series_et"
                        android:layout_width="0dp"
                        android:hint="@string/collection_detail_optional"
                        android:layout_weight="1"
                        style="@style/collectionDetailsEditText"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_more_12_arrow_down"
                        android:layout_marginEnd="@dimen/x32"/>
                </LinearLayout>
                <com.glority.widget.GlTextView
                    android:id="@+id/value_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/collection_value"
                    app:medium_style="true"
                    style="@style/collectionDetailsLabelText"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@drawable/rectangle_f8f8f8_solid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/x32"
                        android:textColor="@color/gl_text_color1"
                        android:gravity="center"
                        android:id="@+id/price_unit_tv"
                        android:background="@drawable/bg_collection_edit_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="$"
                        android:paddingStart="@dimen/x22"
                        android:paddingEnd="@dimen/x32"/>
                    <EditText
                        android:id="@+id/value_et"
                        android:layout_width="0dp"
                        android:hint="@string/collection_detail_optional"
                        android:digits="0123456789.,"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/no_et"
                        style="@style/collectionDetailsEditText"/>
                </LinearLayout>
                <com.glority.widget.GlTextView
                    android:id="@+id/grade_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/collection_detail_add_grade"
                    app:medium_style="true"
                    style="@style/collectionDetailsLabelText"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:id="@+id/grade_ll"
                    android:background="@drawable/rectangle_f8f8f8_solid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/color_333333"
                        android:id="@+id/grade_et"
                        android:layout_width="0dp"
                        android:hint="@string/collection_detail_optional"
                        android:layout_weight="1"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/notes_et"
                        android:layout_marginEnd="@dimen/x32"
                        style="@style/collectionDetailsEditText"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_more_12_arrow_down"
                        android:layout_marginEnd="@dimen/x32"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/more_info_ll"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.glority.widget.GlTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/collection_date"
                        app:medium_style="true"
                        style="@style/collectionDetailsLabelText"/>
                    <LinearLayout
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:id="@+id/cl_acquisition_date"
                            android:background="@drawable/rectangle_f8f8f8_solid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <com.glority.widget.GlTextView
                                android:textColor="@color/color_333333"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:id="@+id/acquisition_et"
                                android:longClickable="false"
                                android:layout_width="0dp"
                                android:hint="@string/collection_date"
                                android:maxLines="1"
                                android:layout_weight="1"
                                android:textIsSelectable="false"
                                android:layout_marginEnd="@dimen/x32"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                style="@style/collectionDetailsEditText"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_more_12_arrow_down"
                                android:layout_marginEnd="@dimen/x32"/>
                        </LinearLayout>
                    </LinearLayout>
                    <com.glority.widget.GlTextView
                        android:id="@+id/tv_name_title"
                        android:paddingBottom="@dimen/x16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:text="@string/collection_detail_popup_editname"
                        app:medium_style="true"
                        style="@style/collectionDetailsLabelText"/>
                    <EditText
                        android:id="@+id/name_et"
                        android:background="@drawable/rectangle_f8f8f8_solid"
                        android:layout_width="match_parent"
                        android:hint="@string/text_tap_to_enter_name"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/value_et"
                        style="@style/collectionDetailsEditText"/>
                    <com.glority.widget.GlTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/collection_detail_add_note"
                        app:medium_style="true"
                        style="@style/collectionDetailsLabelText"/>
                    <EditText
                        android:textSize="@dimen/x28"
                        android:gravity="top"
                        android:id="@+id/notes_et"
                        android:background="@drawable/rectangle_f8f8f8_solid"
                        android:paddingTop="@dimen/x18"
                        android:paddingBottom="@dimen/x18"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x268"
                        android:hint="@string/collection_detail_optional"
                        android:paddingStart="@dimen/x34"
                        android:paddingEnd="@dimen/x34"/>
                    <com.glority.widget.GlTextView
                        android:id="@+id/photo_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/collection_detail_add_photo"
                        app:medium_style="true"
                        style="@style/collectionDetailsLabelText"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:orientation="horizontal"
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.button.MaterialButton
        android:textSize="@dimen/x32"
        android:textColor="@color/gl_text_color2"
        android:layout_gravity="center_horizontal"
        android:id="@+id/add_more_bt"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x78"
        android:layout_marginTop="@dimen/x60"
        android:layout_marginBottom="@dimen/x48"
        android:text="@string/collection_popups_addinfo"
        android:textAllCaps="false"
        android:paddingStart="@dimen/x24"
        android:paddingEnd="@dimen/x24"
        android:letterSpacing="0"
        android:layout_marginHorizontal="@dimen/x50"
        android:textFontWeight="500"
        app:cornerRadius="?attr/appButtonCornerBig"
        app:icon="@drawable/icon_cms_serise_add"
        app:iconGravity="textStart"
        app:iconTint="@color/gl_text_color2"
        app:strokeColor="#cccccc"
        app:strokeWidth="@dimen/x2"
        style="@style/GlButtonStyle.big.outline"/>
    <com.google.android.material.button.MaterialButton
        android:enabled="false"
        android:id="@+id/save_bt"
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x40"
        android:layout_marginBottom="@dimen/x40"
        android:text="@string/text_done"
        android:layout_marginStart="@dimen/x40"
        android:layout_marginEnd="@dimen/x40"
        app:cornerRadius="10dp"
        style="@style/GlButtonStyle.big"/>
</LinearLayout>
