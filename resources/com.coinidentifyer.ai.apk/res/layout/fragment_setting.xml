<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/fragment_setting_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/navi_bar"
        layout="@layout/layout_setting_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/White"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/member_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/gl_text_color3"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:text="@string/vip_customer_service_title"
                    android:paddingStart="@dimen/x42"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/vip_support_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/icon_settings_vip"
                    app:title="@string/setting_cell_my_premium_service"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/membership_manage_item"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/icon_settings_vip"
                    app:title="@string/vip_customer_service_title"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/restore_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_icon_settings_restore_membership_3x"
                    app:title="@string/restore_text_membership"/>
                <com.glority.widget.GlDividerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/support_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/gl_text_color3"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:text="@string/setting_support"
                    android:paddingStart="@dimen/x42"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/suggestion_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/icon_settings_suggestion"
                    app:title="@string/setting_text_suggestion"/>
                <com.glority.widget.GlDividerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/account_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/gl_text_color3"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:text="@string/setting_text_account"
                    android:paddingStart="@dimen/x42"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/account_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/icon_settings_login"
                    app:title="Log In / Sign Up"/>
                <com.glority.widget.GlDividerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/gl_text_color3"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:text="@string/setting_legal"
                    android:paddingStart="@dimen/x42"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/privacy_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/icon_settings_privacy_policy"
                    app:title="@string/login_text_policy"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/term_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/icon_settings_terms_of_service"
                    app:title="@string/login_text_terms"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/new_terms_of_use_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/icon_settings_terms_of_service"
                    app:right_info="@string/agreement_text_new"
                    app:right_info_color="@color/Red"
                    app:right_info_visible="true"
                    app:title="@string/setting_text_terms_of_use"/>
                <com.glority.widget.GlDividerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/about_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/gl_text_color3"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:text="@string/setting_about_the_app"
                    android:paddingStart="@dimen/x42"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/rate_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/icon_settings_encourage_us"
                    app:title="@string/setting_text_encourage_us"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/setting_share"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_icon_settings_tell_friends_3x"
                    app:title="@string/home_text_tell_friends"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/about_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/icon_settings_info"
                    app:title="@string/setting_app_info"/>
                <com.glority.widget.GlDividerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/testing_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/gl_text_color3"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:text="Debug"
                    android:paddingStart="@dimen/x42"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/setting_open_conversion_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="open conversion page(testing)"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/setting_open_premium_center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="open premium center(testing)"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/setting_open_premium_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="open premium welcome(testing)"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/setting_open_manage_membership"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="open manage membership (testing)"/>
                <com.glority.base.widget.SettingItem
                    android:id="@+id/setting_open_nps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="open nps"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="38dp"
                    android:paddingEnd="10dp">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/Black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="enable debug tools(testing)"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="5sp"
                        app:autoSizeTextType="uniform"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_gravity="end|center_vertical"
                        android:id="@+id/enable_debug_tool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.glority.widget.GlDividerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
