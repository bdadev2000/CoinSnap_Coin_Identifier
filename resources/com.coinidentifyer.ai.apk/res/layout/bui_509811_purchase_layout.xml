<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv"
    android:background="@color/Black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/md5_3aedbdc4c479bf460316b4cdaea730f7"
            android:adjustViewBounds="true"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x100"
                android:layout_marginHorizontal="@dimen/x32">
                <com.glority.widget.GlTextView
                    android:textColor="#ffffff"
                    android:id="@+id/tv_restore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/base_widget_text_restore"
                    android:alpha="0.6"
                    app:medium_style="true"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="0x7f080424"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/x40"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x360"
                android:text="@string/conversionpage_title_designyourtrial"
                android:layout_marginHorizontal="@dimen/x60"/>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x28"
                android:layout_marginStart="@dimen/x72"
                android:layout_marginEnd="@dimen/x72">
                <ImageView
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/x32"
                    android:src="@drawable/md5_bcd859cf504296b32d3ed5afc672f8dd"/>
                <TextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/White"
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coin_new_enjoy"
                    android:layout_marginStart="@dimen/x16"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x12"
                android:layout_marginStart="@dimen/x72"
                android:layout_marginEnd="@dimen/x72">
                <ImageView
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/x32"
                    android:src="@drawable/md5_bcd859cf504296b32d3ed5afc672f8dd"/>
                <TextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coin_new_cancel"
                    android:layout_marginStart="@dimen/x16"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x12"
                android:layout_marginStart="@dimen/x72"
                android:layout_marginEnd="@dimen/x72">
                <ImageView
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/x32"
                    android:src="@drawable/md5_bcd859cf504296b32d3ed5afc672f8dd"/>
                <TextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_feature_1"
                    android:layout_marginStart="@dimen/x16"/>
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x12"
                android:layout_marginStart="@dimen/x72"
                android:layout_marginEnd="@dimen/x72">
                <ImageView
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/x32"
                    android:src="@drawable/md5_bcd859cf504296b32d3ed5afc672f8dd"/>
                <TextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/White"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_feature_4"
                    android:layout_marginStart="@dimen/x16"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/purchase_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30">
                <FrameLayout
                    android:background="#4d4d4d"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginHorizontal="@dimen/x60"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/free_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/x60"
                    android:paddingHorizontal="@dimen/x32"
                    android:paddingVertical="@dimen/x20">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/x32"
                            android:textStyle="bold"
                            android:textColor="@color/White"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/coversionpage_loading_free"/>
                        <TextView
                            android:textSize="@dimen/x24"
                            android:textColor="@color/White"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x8"
                            android:text="@string/conversionpage_price_7days"/>
                    </LinearLayout>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/free_select_iv"
                        android:layout_width="@dimen/x48"
                        android:layout_height="@dimen/x48"
                        android:src="@drawable/md5_bcd859cf504296b32d3ed5afc672f8dd"/>
                </LinearLayout>
                <FrameLayout
                    android:background="#4d4d4d"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginHorizontal="@dimen/x60"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/month_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/x60"
                    android:paddingHorizontal="@dimen/x32"
                    android:paddingVertical="@dimen/x20">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/x32"
                            android:textStyle="bold"
                            android:textColor="@color/White"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/conversionpage_price_1month"/>
                        <TextView
                            android:textSize="@dimen/x24"
                            android:textColor="@color/White"
                            android:id="@+id/month_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x8"
                            android:text=""/>
                    </LinearLayout>
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/month_select_iv"
                        android:layout_width="@dimen/x48"
                        android:layout_height="@dimen/x48"
                        android:src="@drawable/md5_41737b6be67802fe0fca853a9baf80d7"/>
                </LinearLayout>
                <FrameLayout
                    android:background="#4d4d4d"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginHorizontal="@dimen/x60"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/reminder_layout"
                android:background="@drawable/bui_509811_outline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x44"
                android:minHeight="@dimen/x64"
                android:paddingStart="@dimen/x22"
                android:paddingEnd="@dimen/x14"
                android:layout_marginHorizontal="@dimen/x46">
                <com.glority.widget.GlTextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/White"
                    android:id="@+id/tv_reminder_guide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/text_reminder_guide"
                    android:maxLines="2"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/x20"
                    android:layout_marginVertical="@dimen/x8"/>
                <androidx.appcompat.widget.SwitchCompat
                    android:theme="@style/bui_memo50207_MySwitchTheme"
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"/>
            </LinearLayout>
            <FrameLayout
                android:layout_gravity="center"
                android:id="@+id/continue_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/iv_anima2"
                    android:layout_width="@dimen/x720"
                    android:layout_height="@dimen/x148"
                    android:scaleType="fitXY"
                    app:lottie_autoPlay="true"
                    app:lottie_enableMergePathsForKitKatAndAbove="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/lottie_509811_data2"/>
                <FrameLayout
                    android:layout_gravity="center"
                    android:background="@drawable/bui_509811_bg"
                    android:layout_width="@dimen/x620"
                    android:layout_height="@dimen/x100"/>
                <com.glority.widget.GlTextView
                    android:textSize="@dimen/x40"
                    android:textStyle="bold"
                    android:textColor="@color/gl_text_color1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/continue_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/personal_center_text_try_for_free"
                    android:maxLines="1"
                    android:layout_marginHorizontal="@dimen/x100"/>
                <ImageView
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x21"
                    android:src="0x7f080422"
                    android:layout_marginEnd="@dimen/x70"/>
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_gravity="center"
                    android:id="@+id/iv_anima"
                    android:layout_width="@dimen/x620"
                    android:layout_height="@dimen/x100"
                    android:scaleType="fitXY"
                    app:lottie_autoPlay="true"
                    app:lottie_enableMergePathsForKitKatAndAbove="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/lottie_509811_data"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/price_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/White"
                    android:gravity="center_horizontal"
                    android:id="@+id/price_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/x60"/>
                <com.glority.widget.GlTextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/White"
                    android:gravity="center"
                    android:id="@+id/price_text2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    app:auto_resize="true"/>
            </FrameLayout>
            <TextView
                android:textSize="@dimen/x20"
                android:textColor="#a4a6a5"
                android:id="@+id/policy_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:text="@string/text_payment_will_be_charged"
                android:layout_marginHorizontal="@dimen/x40"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/start_anima_fl"
            android:background="@color/memo_50981_color_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="@dimen/x48"
                android:textStyle="bold"
                android:textColor="@color/memo_50981_color_1"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/start_anima_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coversionpage_loading_start7dayfreetrial"
                android:paddingHorizontal="@dimen/x60"/>
        </FrameLayout>
    </FrameLayout>
</ScrollView>
