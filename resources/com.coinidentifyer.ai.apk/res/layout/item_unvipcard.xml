<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:tag="layout/item_unvipcard_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/x30">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/un_vip_bg"
        android:layout_width="@dimen/x686"
        android:layout_height="@dimen/x328">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x64"
            android:layout_marginStart="@dimen/x48"
            android:layout_marginEnd="@dimen/x48">
            <ImageView
                android:layout_width="@dimen/x64"
                android:layout_height="@dimen/x64"
                android:src="@drawable/icon_not_activated"/>
            <TextView
                android:textSize="@dimen/x32"
                android:textColor="@color/white"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vip_service_unlock_premium_privileges"
                android:layout_marginStart="@dimen/x20"/>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:textSize="@dimen/x28"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal"
            android:id="@+id/be_member_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20"
            android:text="@string/more_premium_title"
            android:drawablePadding="@dimen/x8"
            android:layout_marginStart="@dimen/x20"
            app:drawableEndCompat="@drawable/icon_list_arrow"/>
    </LinearLayout>
</LinearLayout>
