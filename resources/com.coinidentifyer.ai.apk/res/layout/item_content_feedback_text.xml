<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_content_feedback_text_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ripple_r10"
        android:minHeight="@dimen/x160"
        android:paddingHorizontal="@dimen/x40"
        android:paddingVertical="@dimen/x36">
        <ImageView
            android:id="@+id/icon_iv"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x48"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/x32">
            <com.glority.widget.GlTextView
                android:textSize="@dimen/x36"
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:medium_style="true"/>
            <TextView
                android:textSize="@dimen/x28"
                android:id="@+id/info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x12"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/arrow_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_right"
            app:tint="@color/gl_text_color1"/>
    </LinearLayout>
    <com.glority.widget.GlDividerView
        android:id="@+id/divider_v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_marginStart="@dimen/x40"/>
</LinearLayout>
