<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/ll_purchase1"
            android:background="@color/gl_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:foreground="@drawable/ripple_rect_r_10dp"
            android:translationZ="@dimen/x6"
            android:elevation="@dimen/x6"
            app:cardBackgroundColor="@color/gl_transparent"
            app:cardCornerRadius="@dimen/x21"
            app:cardElevation="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:id="@+id/ll_purchase1_bg"
                android:layout_width="@dimen/x176"
                android:layout_height="@dimen/y228">
                <com.glority.widget.GlTextView
                    android:textSize="@dimen/x28"
                    android:textStyle="bold"
                    android:textColor="@color/gl_text_color5"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/purchase1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y28"
                    android:text="@string/base_widget_text_monthly"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/gl_text_color5"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_purchase1_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x102"
                    android:includeFontPadding="false"
                    android:fontFamily="@string/Roboto_Regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.glority.widget.GlTextView
                    android:textSize="@dimen/x24"
                    android:textColor="#909090"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/billed_purchase1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y14"
                    android:text="@string/base_widget_text_billed_monthly"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:fontFamily="@string/Roboto_Regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ll_purchase2"
            android:background="@color/gl_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x14"
            android:foreground="@drawable/ripple_rect_r_10dp"
            android:layout_marginStart="@dimen/x14"
            android:layout_marginEnd="@dimen/x14"
            android:translationZ="@dimen/x6"
            android:elevation="@dimen/x6"
            app:cardBackgroundColor="@color/gl_transparent"
            app:cardCornerRadius="@dimen/x21"
            app:cardElevation="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:id="@+id/ll_purchase2_bg"
                android:layout_width="@dimen/x232"
                android:layout_height="@dimen/x282">
                <com.glority.widget.GlTextView
                    android:textSize="@dimen/x24"
                    android:textStyle="bold"
                    android:textColor="#252525"
                    android:gravity="center"
                    android:id="@+id/tv_special_offer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x28"
                    android:layout_marginTop="@dimen/x6"
                    android:text="@string/base_widget_text_most_popular"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="parent"/>
                <com.glority.widget.GlTextView
                    android:textSize="@dimen/x34"
                    android:textStyle="bold"
                    android:textColor="@color/gl_bg_white"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/tv_7_day_free_trial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x82"
                    android:text="@string/base_widget_text_7_day_free_trial"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/x28"
                    android:textStyle="bold"
                    android:textColor="#252525"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_continue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y54"
                    android:layout_marginTop="@dimen/x202"
                    android:text="@string/base_widget_text_continue"
                    android:fontFamily="@string/Roboto_Black"
                    android:layout_marginStart="@dimen/x24"
                    android:layout_marginEnd="@dimen/x24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/ll_purchase3"
            android:background="@color/gl_transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:foreground="@drawable/ripple_rect_r_10dp"
            android:translationZ="@dimen/x6"
            android:elevation="@dimen/x6"
            app:cardBackgroundColor="@color/gl_transparent"
            app:cardCornerRadius="@dimen/x21"
            app:cardElevation="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:id="@+id/ll_purchase3_bg"
                android:layout_width="@dimen/x176"
                android:layout_height="@dimen/y228">
                <com.glority.widget.GlTextView
                    android:textSize="@dimen/x28"
                    android:textStyle="bold"
                    android:textColor="@color/gl_text_color5"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/purchase3_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y28"
                    android:text="YEARLY"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/x28"
                    android:textColor="@color/gl_text_color5"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_purchase3_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x28"
                    android:includeFontPadding="false"
                    android:fontFamily="@string/Roboto_Regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/purchase3_title"/>
                <com.glority.widget.GlTextView
                    android:textSize="@dimen/x24"
                    android:textColor="@color/gl_text_color5"
                    android:gravity="center_horizontal"
                    android:id="@+id/purchase3_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="@dimen/x56"
                    android:maxLines="2"
                    android:includeFontPadding="false"
                    app:layout_constraintBottom_toTopOf="@+id/billed_purchase3"
                    app:layout_constraintTop_toBottomOf="@+id/tv_purchase3_price"/>
                <com.glority.widget.GlTextView
                    android:textSize="@dimen/x24"
                    android:textColor="#909090"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/billed_purchase3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y14"
                    android:text="@string/base_widget_text_billed_yearly"
                    android:maxLines="1"
                    android:includeFontPadding="false"
                    android:fontFamily="@string/Roboto_Regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/x28"
        android:textColor="@color/gl_text_color5"
        android:layout_gravity="bottom|center_horizontal"
        android:id="@+id/tv_then_year_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_widget_text_then_s"
        android:includeFontPadding="false"
        android:fontFamily="@string/Roboto_Regular"/>
</LinearLayout>
