<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/item_me_collection_card_0"
    android:background="@drawable/shape_rect_solid_white_r_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ripple_r10"
    android:layout_marginHorizontal="@dimen/x32"
    android:layout_marginVertical="@dimen/x12">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="@dimen/x42"
        android:paddingBottom="@dimen/x42"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/iv_me_collection_picture"
            android:background="@drawable/bg_r8_e1e1e1"
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/x168"
            android:layout_marginStart="@dimen/x32"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/roundedCornerImageStyle8">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_me_collection_coin_toe"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x100"
                android:scaleType="centerCrop"/>
            <Space
                android:layout_width="@dimen/x8"
                android:layout_height="0dp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_me_collection_coin_header"
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x100"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/num_tv"
            android:background="@drawable/shape_rect_solid_99000000_r_8"
            android:padding="@dimen/x8"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/iv_me_collection_picture"
            app:layout_constraintTop_toTopOf="@+id/iv_me_collection_picture"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginEnd="@dimen/x85"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_me_collection_picture"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/x28"
                android:textStyle="bold"
                android:textColor="@color/gl_text_color1"
                android:ellipsize="end"
                android:id="@+id/tv_me_collection_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:lineSpacingExtra="2dp"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:id="@+id/ll_grade_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/x32"
                    android:src="@drawable/icon_collection_card_grade_icon"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/x24"
                    android:textColor="@color/gl_text_color3"
                    android:id="@+id/grade_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/x12"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x12">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/x32"
                    android:layout_height="@dimen/x32"
                    android:src="@drawable/icon_collection_card_price_icon"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/x24"
                    android:textColor="@color/gl_text_color3"
                    android:gravity="center_vertical"
                    android:id="@+id/price_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/x12"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/iv_me_collection_more"
            android:paddingTop="@dimen/x24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/ripple_r20_deep"
            android:paddingEnd="@dimen/x32"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@drawable/icon_ios_more"
                android:scaleType="center"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.glority.widget.GlDividerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:layout_marginStart="@dimen/x300"/>
</LinearLayout>
