<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/x16"
    android:paddingBottom="@dimen/x16"
    android:clipChildren="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/ll_weekly"
                android:background="@color/gl_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:foreground="@drawable/ripple_rect_r_10dp"
                app:cardBackgroundColor="@color/gl_transparent"
                app:cardCornerRadius="@dimen/x21"
                app:cardElevation="0dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_weekly_bg"
                    android:layout_width="@dimen/x184"
                    android:layout_height="@dimen/x239">
                    <com.glority.widget.GlTextView
                        android:textSize="@dimen/x28"
                        android:textStyle="bold"
                        android:textColor="@color/gl_text_color5"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/weekly_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y28"
                        android:text="@string/base_widget_text_monthly"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="@dimen/x28"
                        android:textColor="@color/gl_text_color5"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_weekly_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y102"
                        android:includeFontPadding="false"
                        android:fontFamily="@string/Roboto_Regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <com.glority.widget.GlTextView
                        android:textSize="@dimen/x24"
                        android:textColor="#909090"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/billed_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/y14"
                        android:text="@string/base_widget_text_billed_monthly"
                        android:maxLines="2"
                        android:includeFontPadding="false"
                        android:fontFamily="@string/Roboto_Regular"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/ll_7_day_free"
                android:background="@color/gl_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x14"
                android:foreground="@drawable/ripple_rect_r_10dp"
                android:layout_marginStart="@dimen/x14"
                android:layout_marginEnd="@dimen/x14"
                app:cardBackgroundColor="@color/gl_transparent"
                app:cardCornerRadius="@dimen/x21"
                app:cardElevation="0dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_7_day_free_bg"
                    android:layout_width="@dimen/x243"
                    android:layout_height="@dimen/x296">
                    <TextView
                        android:textSize="@dimen/x24"
                        android:textStyle="bold"
                        android:textColor="#252525"
                        android:gravity="center"
                        android:id="@+id/tv_special_offer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x28"
                        android:layout_marginTop="@dimen/x6"
                        android:text="SPECIAL OFFER"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <com.glority.widget.GlTextView
                        android:textSize="@dimen/x34"
                        android:textStyle="bold"
                        android:textColor="@color/gl_bg_white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/tv_7_day_free_trial"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x82"
                        android:text="@string/base_widget_text_7_day_free_trial"
                        android:maxLines="2"
                        android:includeFontPadding="false"
                        android:lineSpacingMultiplier="1.6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="@dimen/x28"
                        android:textStyle="bold"
                        android:textColor="#252525"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:id="@+id/tv_continue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y54"
                        android:layout_marginTop="@dimen/x202"
                        android:text="@string/base_widget_text_continue"
                        android:fontFamily="@string/Roboto_Black"
                        android:layout_marginStart="@dimen/x24"
                        android:layout_marginEnd="@dimen/x24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/ll_monthly"
                android:background="@color/gl_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y30"
                android:foreground="@drawable/ripple_rect_r_10dp"
                app:cardBackgroundColor="@color/gl_transparent"
                app:cardCornerRadius="@dimen/x21"
                app:cardElevation="0dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_monthly_bg"
                    android:layout_width="@dimen/x184"
                    android:layout_height="@dimen/x239">
                    <com.glority.widget.GlTextView
                        android:textSize="@dimen/x28"
                        android:textStyle="bold"
                        android:textColor="@color/gl_text_color5"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/monthly_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y28"
                        android:text="QUARTERLY"
                        android:maxLines="1"
                        android:includeFontPadding="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:textSize="@dimen/x28"
                        android:textColor="@color/gl_text_color5"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/tv_monthly_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/y102"
                        android:includeFontPadding="false"
                        android:fontFamily="@string/Roboto_Regular"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <com.glority.widget.GlTextView
                        android:textSize="@dimen/x24"
                        android:textColor="#909090"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/billed_monthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Billed quarterly"
                        android:maxLines="2"
                        android:includeFontPadding="false"
                        android:fontFamily="@string/Roboto_Regular"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.545"
                        app:layout_constraintStart_toStartOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:textSize="@dimen/x28"
            android:textStyle="bold"
            android:textColor="@color/gl_text_color5"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/tv_limited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Limited-time offer"
            android:includeFontPadding="false"
            android:fontFamily="@string/Roboto_Regular"/>
    </LinearLayout>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/right_top_icon"
        android:layout_width="@dimen/x59"
        android:layout_height="@dimen/x59"
        android:layout_marginTop="-4dp"
        android:layout_marginStart="@dimen/x120"/>
</FrameLayout>
