<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shimmerNative"
    android:tag="layout/ads_shimmer_native_small_2_0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="vertical"
        android:id="@+id/ad_unit_content"
        android:background="@drawable/adx_bg_native_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:paddingEnd="8dp">
                <View
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/ad_media"
                    android:layout_width="135dp"
                    android:layout_height="130dp"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ad_app_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="#28212121"
                            android:adjustViewBounds="true"/>
                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:ellipsize="end"
                            android:id="@+id/ad_headline"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:maxLines="2"/>
                    </LinearLayout>
                    <TextView
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:gravity="bottom"
                        android:id="@+id/ad_advertiser"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:maxLines="2"
                        android:layout_weight="1"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:ellipsize="end"
                        android:id="@+id/ad_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="3"/>
                    <View
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:gravity="center"
                        android:id="@+id/ad_call_to_action"
                        android:background="@drawable/adx_border_cta_native_language"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:backgroundTint="#40000000"
                        android:layout_marginHorizontal="@dimen/_5sdp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView style="@style/AppTheme.Ads"/>
    </RelativeLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
