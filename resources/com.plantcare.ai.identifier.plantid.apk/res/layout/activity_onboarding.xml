<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/activity_onboarding_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/fr_ads"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="@dimen/_24sdp">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_center"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/ll_circle"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_12sdp">
            <TextView
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/txt_description"
                android:gravity="center"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/next_onb"
                android:fontFamily="@font/noto_medium"
                android:paddingHorizontal="@dimen/_8sdp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/view_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_view_select"
                android:layout_marginEnd="@dimen/_5sdp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/view_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_view_un_select"
                android:layout_marginEnd="@dimen/_5sdp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/view_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_view_un_select"
                android:layout_marginEnd="@dimen/_5sdp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/view_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_view_un_select"/>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tv_get_start"
                android:background="@drawable/bg_text_next"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/next_onb"
                android:fontFamily="@font/noto_medium"
                android:paddingHorizontal="@dimen/_12sdp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/ll_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/_12sdp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/view_center_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_view_select"
                    android:layout_marginEnd="@dimen/_5sdp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/view_center_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_view_un_select"
                    android:layout_marginEnd="@dimen/_5sdp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/view_center_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_view_un_select"
                    android:layout_marginEnd="@dimen/_5sdp"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/view_center_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_view_un_select"/>
            </LinearLayout>
            <TextView
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/txt_description"
                android:gravity="center"
                android:id="@+id/tv_get_start_center"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingRight="@dimen/_8sdp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="@string/next_onb"
                android:fontFamily="@font/noto_medium"
                android:paddingHorizontal="@dimen/_8sdp"/>
        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/fr_ads"
        android:tag="binding_1"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent">
        <include
            android:id="@+id/shimmer_ads"
            layout="@layout/ads_shimmer_native_large"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
