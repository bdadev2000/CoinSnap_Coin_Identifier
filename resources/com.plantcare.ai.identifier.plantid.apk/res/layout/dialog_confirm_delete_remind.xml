<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:tag="layout/dialog_confirm_delete_remind_0"
    android:background="@drawable/bg_dialog"
    android:padding="@dimen/_12sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/_18ssp"
        android:textColor="@color/txt_red"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:text="@string/delete"
        android:fontFamily="@font/nunito_semi_bold"/>
    <TextView
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/txt_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:text="@string/are_you_sure_you_want_to_delete_you_will_not_be_able_to_undo_this_action"
        android:fontFamily="@font/nunito_medium"
        android:textAlignment="center"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:weightSum="2">
        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/txt_description"
            android:id="@+id/btnCancel"
            android:background="@drawable/bg_btn_cancel_delete_remind"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semi_bold"
            android:textAlignment="center"
            android:paddingVertical="@dimen/_12sdp"/>
        <View
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_1sdp"/>
        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/txt_white"
            android:id="@+id/btnDelete"
            android:background="@drawable/bg_btn_delete_remind"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:layout_weight="1"
            android:fontFamily="@font/nunito_semi_bold"
            android:textAlignment="center"
            android:paddingVertical="@dimen/_12sdp"/>
    </LinearLayout>
</LinearLayout>
