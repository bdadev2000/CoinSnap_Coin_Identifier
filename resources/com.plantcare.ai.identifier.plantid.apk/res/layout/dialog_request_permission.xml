<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:tag="layout/dialog_request_permission_0"
    android:background="@drawable/bg_dialog"
    android:paddingLeft="@dimen/_16sdp"
    android:paddingTop="@dimen/_12sdp"
    android:paddingRight="@dimen/_16sdp"
    android:paddingBottom="@dimen/_12sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_16sdp"
    android:paddingVertical="@dimen/_12sdp">
    <TextView
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/txt_dark"
        android:gravity="center"
        android:id="@+id/tvTitlePermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="@font/nunito_semi_bold"/>
    <TextView
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/txt_dark"
        android:gravity="center"
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:text="@string/allow_app_s_name_to_take_pictures_and_nrecord_video"
        android:fontFamily="@font/nunito_semi_bold"/>
    <TextView
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/txt_white"
        android:gravity="center"
        android:id="@+id/btnGoToSetting"
        android:background="@drawable/bg_btn_go_permission"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:text="@string/go_to_setting"
        android:fontFamily="@font/nunito_semi_bold"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_12sdp"/>
</LinearLayout>
