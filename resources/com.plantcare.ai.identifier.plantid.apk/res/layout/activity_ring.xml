<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:tag="layout/activity_ring_0"
    android:background="@color/bg_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_200sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:src="@drawable/img_ring"/>
    <TextView
        android:textSize="@dimen/_30ssp"
        android:textColor="@color/txt_green"
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_8sdp"
        android:fontFamily="@font/nunito_bold"/>
    <TextView
        android:textSize="@dimen/_18ssp"
        android:textColor="@color/txt_dark"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@+id/tvTitle"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:fontFamily="@font/nunito_bold"
        android:layout_marginHorizontal="@dimen/_12sdp"/>
    <TextView
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/txt_dark"
        android:gravity="center"
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:maxLines="2"
        android:fontFamily="@font/nunito_medium"
        android:layout_marginHorizontal="@dimen/_20sdp"/>
    <TextView
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/txt_dark"
        android:gravity="center"
        android:id="@+id/btnSnooze"
        android:background="@drawable/bg_btn_snooze"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:text="@string/snooze_5_minutes"
        android:fontFamily="@font/nunito_bold"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_12sdp"/>
    <TextView
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/txt_white"
        android:gravity="center"
        android:id="@+id/btnLetDoIt"
        android:background="@drawable/bg_btn_let_do_it"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:text="@string/let_s_do_it"
        android:fontFamily="@font/nunito_bold"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_12sdp"/>
</LinearLayout>
