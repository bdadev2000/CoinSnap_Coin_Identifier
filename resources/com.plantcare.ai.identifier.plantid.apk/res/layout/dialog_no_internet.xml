<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:tag="layout/dialog_no_internet_0"
    android:background="@drawable/bg_dialog"
    android:padding="@dimen/_12sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/_18ssp"
        android:textColor="@color/txt_dark"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:text="@string/failed"
        android:fontFamily="@font/nunito_semi_bold"/>
    <TextView
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/txt_dark"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_12sdp"
        android:text="@string/oh_no_something_went_wrong_please_check_your_internet_connection_then_try_again"
        android:fontFamily="@font/nunito_semi_bold"/>
    <TextView
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/txt_white"
        android:gravity="center"
        android:id="@+id/btnTryAgain"
        android:background="@drawable/bg_btn_try_again"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:text="@string/try_again"
        android:fontFamily="@font/nunito_semi_bold"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_12sdp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp">
        <TextView
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/txt_description"
            android:id="@+id/btnBackToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_to_home"
            android:fontFamily="@font/nunito_semi_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:background="@color/txt_description"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="@+id/btnBackToHome"
            app:layout_constraintStart_toStartOf="@+id/btnBackToHome"
            app:layout_constraintTop_toBottomOf="@+id/btnBackToHome"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
