<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/layoutContainer"
    android:tag="layout/activity_diagnose_0"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/header_background"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingTop="@dimen/_20sdp"
        android:paddingRight="@dimen/_12sdp"
        android:paddingBottom="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_20sdp">
        <ImageView
            android:layout_gravity="start|center_vertical"
            android:id="@+id/btnBack"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back_icon"/>
        <TextView
            android:textSize="@dimen/_16sdp"
            android:textColor="@color/primary"
            android:gravity="center"
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:text="@string/diagnose"
            android:fontFamily="@font/nunito_bold"
            android:layout_marginHorizontal="@dimen/_15sdp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/bg_search"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:layout_marginVertical="@dimen/_12sdp">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivSearchIcon"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:src="@drawable/ic_search"
            android:contentDescription="@string/search_icon"
            android:layout_marginHorizontal="@dimen/_5sdp"
            app:tint="#aaaabb"/>
        <EditText
            android:textSize="@dimen/_14sdp"
            android:textColorHint="#aaaabb"
            android:id="@+id/etSearch"
            android:background="@android:color/transparent"
            android:padding="@dimen/_5sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            android:maxLength="20"
            android:layout_weight="1"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:autofillHints=""/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <androidx.recyclerview.widget.RecyclerView
            android:scrollbarSize="0dp"
            android:id="@+id/rvDiagnoseList"
            android:visibility="visible"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_12sdp"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/layoutNoResult"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/img_no_result"
                android:layout_width="@dimen/_115sdp"
                android:layout_height="@dimen/_112sdp"
                android:src="@drawable/img_no_history_data"
                android:scaleType="centerCrop"
                android:contentDescription="@string/no_result"/>
            <TextView
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/no_result"
                android:fontFamily="@font/nunito_regular"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/frAds"
        android:tag="binding_1"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <include
            android:id="@+id/shimmerAds"
            layout="@layout/ads_shimmer_native_small"/>
    </FrameLayout>
</LinearLayout>
