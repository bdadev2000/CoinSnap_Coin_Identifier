<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_disease"
    android:tag="layout/item_plant_disease_0"
    android:background="@drawable/bg_btn_secondary_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginVertical="@dimen/_5sdp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/plant_disease_img"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/tvDiseaseName"
        app:layout_constraintEnd_toStartOf="@+id/tvDiseaseName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDiseaseName"
        app:shapeAppearanceOverlay="@style/rounded_corner_image"/>
    <TextView
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:gravity="start"
        android:id="@+id/tvDiseaseName"
        android:paddingLeft="@dimen/_12sdp"
        android:paddingTop="@dimen/_30sdp"
        android:paddingRight="@dimen/_12sdp"
        android:paddingBottom="@dimen/_30sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_regular"
        android:layout_marginStart="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plant_disease_img"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
