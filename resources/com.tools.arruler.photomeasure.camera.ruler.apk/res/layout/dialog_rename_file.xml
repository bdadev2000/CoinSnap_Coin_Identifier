<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/dialog_rename_file_0"
    android:background="@drawable/bg_dialog_rename_file"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_10sdp">
    <TextView
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/rename_image"
        android:fontFamily="@font/be_vietnam_pro_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/llSearchBox"
        android:background="@drawable/bg_search_box"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_16sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_16sdp"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle">
        <EditText
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/color_999ca1"
            android:textColorHint="@color/color_999ca1"
            android:id="@+id/edtSearch"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="30"
            android:layout_weight="1"
            android:inputType="text"
            android:imeOptions="actionDone"
            android:textCursorDrawable="@drawable/color_cursor"
            android:fontFamily="@font/be_vietnam_pro_regular"/>
        <ImageView
            android:id="@+id/imgClearText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_name"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/color_999ca1"
        android:gravity="center"
        android:id="@+id/txtCancel"
        android:background="@drawable/bg_dont_save_button"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        android:text="@string/don_t_save"
        android:fontFamily="@font/be_vietnam_pro_semi_bold"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtApply"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llSearchBox"/>
    <TextView
        android:textSize="@dimen/_13ssp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/txtApply"
        android:background="@drawable/bg_save_button"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        android:text="@string/save"
        android:fontFamily="@font/be_vietnam_pro_semi_bold"
        android:layout_marginStart="@dimen/_8sdp"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtCancel"
        app:layout_constraintTop_toBottomOf="@+id/llSearchBox"/>
</androidx.constraintlayout.widget.ConstraintLayout>
