<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/activity_iap_0"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/tv_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv_background"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/ic_background_iap"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:layout_constraintDimensionRatio="4:3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:src="@drawable/ic_close_iap"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/color_464646"
                android:id="@+id/tv_ar_ruler_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:text="@string/ar_ruler_premium"
                android:fontFamily="@font/be_vietnam_pro_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imv_background"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv_unlock_everything"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:src="@drawable/ic_unlock_everything"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ar_ruler_premium"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv_premium_iap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:src="@drawable/ic_premium_iap"
                android:layout_marginStart="@dimen/_12sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imv_unlock_everything"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/color_464646"
                android:id="@+id/tv_ad_fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/ad_fee_experience"
                android:fontFamily="@font/be_vietnam_pro_regular"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@+id/imv_premium_iap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imv_premium_iap"
                app:layout_constraintTop_toTopOf="@+id/imv_premium_iap"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv_hand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:src="@drawable/ic_hand"
                app:layout_constraintStart_toStartOf="@+id/imv_premium_iap"
                app:layout_constraintTop_toBottomOf="@+id/tv_ad_fee"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/color_464646"
                android:id="@+id/tv_enjoy_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/enjoy_all"
                android:fontFamily="@font/be_vietnam_pro_regular"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@+id/imv_hand"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imv_hand"
                app:layout_constraintTop_toTopOf="@+id/imv_hand"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imv_infinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:src="@drawable/ic_infinity"
                app:layout_constraintStart_toStartOf="@+id/imv_hand"
                app:layout_constraintTop_toBottomOf="@+id/tv_enjoy_all"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/color_464646"
                android:id="@+id/tv_experience_a_smoother"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/experience_a_smoother"
                android:fontFamily="@font/be_vietnam_pro_regular"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@+id/imv_infinity"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imv_infinity"
                app:layout_constraintTop_toTopOf="@+id/imv_infinity"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_yearly"
                android:background="@drawable/bg_item_iap_active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_experience_a_smoother">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_switch_life_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_switch_iap"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_sub_money"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_life_time"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/color_212121"
                    android:id="@+id/tv_life_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/yearly"
                    android:fontFamily="@font/be_vietnam_pro_bold"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@+id/imv_switch_life_time"
                    app:layout_constraintTop_toTopOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/color_5C5C5C"
                    android:id="@+id/tv_sub_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/be_vietnam_pro_regular"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imv_switch_life_time"
                    app:layout_constraintTop_toBottomOf="@+id/tv_life_time"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_6sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_sub_money"
                    app:layout_constraintStart_toEndOf="@+id/tv_sub_money"
                    app:layout_constraintTop_toTopOf="@+id/tv_sub_money"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/color_5C5C5C"
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/be_vietnam_pro_bold"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@+id/imv_arrow_right"
                    app:layout_constraintTop_toBottomOf="@+id/tv_life_time"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/white"
                    android:id="@+id/tv_best_choice"
                    android:background="@drawable/bg_text_best_choice"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/best_choice"
                    android:fontFamily="@font/be_vietnam_pro_bold"
                    android:layout_marginEnd="2dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_monthly"
                android:background="@drawable/bg_item_iap_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraint_yearly">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imv_switch_monthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_switch_iap"
                    android:layout_marginStart="@dimen/_8sdp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_money_monthly"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_monthly"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textSize="@dimen/_14ssp"
                    android:textColor="@color/color_212121"
                    android:id="@+id/tv_monthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:text="@string/monthly"
                    android:fontFamily="@font/be_vietnam_pro_bold"
                    android:layout_marginStart="@dimen/_12sdp"
                    app:layout_constraintStart_toEndOf="@+id/imv_switch_monthly"
                    app:layout_constraintTop_toTopOf="parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/color_636363"
                    android:id="@+id/tv_money_monthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:fontFamily="@font/be_vietnam_pro_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_monthly"
                    app:layout_constraintTop_toBottomOf="@+id/tv_monthly"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/white"
        android:id="@+id/tv_continue"
        android:background="@drawable/bg_text_continue_iap"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:text="@string/text_continue"
        android:fontFamily="@font/be_vietnam_pro_bold"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@+id/tv_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/color_636363"
        android:id="@+id/tv_cancel"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:text="@string/cancel"
        android:fontFamily="@font/be_vietnam_pro_regular"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/tv_iap_policy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/_10ssp"
        android:textColorLink="#fdc830"
        android:id="@+id/tv_iap_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:text="@string/iap_policy"
        android:fontFamily="@font/be_vietnam_pro_semi_bold"
        android:textAlignment="center"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
