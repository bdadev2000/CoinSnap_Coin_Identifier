<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/dialog_camera_permission_0"
    android:background="@drawable/bg_dialog_rename_file"
    android:paddingLeft="@dimen/_20sdp"
    android:paddingTop="@dimen/_24sdp"
    android:paddingRight="@dimen/_20sdp"
    android:paddingBottom="@dimen/_24sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_20sdp"
    android:paddingVertical="@dimen/_24sdp">
    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.4"
        app:srcCompat="@drawable/ic_camera_permission"/>
    <TextView
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/permission_requite"
        android:fontFamily="@font/be_vietnam_pro_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgIcon"/>
    <TextView
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/color_999ca1"
        android:gravity="center"
        android:id="@+id/txtPermissionExplain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/permission_explain"
        android:fontFamily="@font/be_vietnam_pro_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitle"/>
    <TextView
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/txtAccept"
        android:background="@drawable/bg_accept_button"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/accept"
        android:fontFamily="@font/be_vietnam_pro_semi_bold"
        android:layout_marginStart="@dimen/_8sdp"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtCancel"
        app:layout_constraintTop_toBottomOf="@+id/txtPermissionExplain"/>
    <TextView
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/txtCancel"
        android:background="@drawable/bg_accept_button"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/cancel"
        android:fontFamily="@font/be_vietnam_pro_semi_bold"
        android:backgroundTint="@color/color_dddddd"
        android:paddingVertical="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/txtAccept"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPermissionExplain"/>
</androidx.constraintlayout.widget.ConstraintLayout>
