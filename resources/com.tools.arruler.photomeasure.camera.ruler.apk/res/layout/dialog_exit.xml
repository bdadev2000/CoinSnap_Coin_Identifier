<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/dialog_exit_0"
    android:background="@drawable/bg_dialog_exit"
    android:padding="@dimen/_16sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_bg"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/ic_exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/color_343944"
        android:id="@+id/tv_camera_access"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="@string/exit_app"
        android:fontFamily="@font/be_vietnam_pro_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_bg"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/_10ssp"
        android:textColor="@color/color_999ca1"
        android:id="@+id/tv_camera_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        android:text="@string/are_you_sure_to_continue_logging_out_of_the_application"
        android:fontFamily="@font/be_vietnam_pro_regular"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_camera_access"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/color_white"
        android:id="@+id/tv_continue"
        android:background="@drawable/bg_text_continue"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/txt_continue"
        android:fontFamily="@font/be_vietnam_pro_semi_bold"
        android:textAlignment="center"
        android:layout_marginEnd="@dimen/_8sdp"
        android:paddingVertical="@dimen/_12sdp"
        app:layout_constraintEnd_toStartOf="@+id/tv_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_camera_details"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/color_292D32"
        android:id="@+id/tv_cancel"
        android:background="@drawable/bg_text_start"
        android:paddingTop="@dimen/_12sdp"
        android:paddingBottom="@dimen/_12sdp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/cancel"
        android:fontFamily="@font/be_vietnam_pro_semi_bold"
        android:textAlignment="center"
        android:layout_marginStart="@dimen/_8sdp"
        android:paddingVertical="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_continue"
        app:layout_constraintTop_toBottomOf="@+id/tv_camera_details"/>
    <FrameLayout
        android:orientation="vertical"
        android:id="@+id/fr_ads"
        android:tag="binding_1"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_continue">
        <include
            android:id="@+id/shimmer_ads"
            layout="@layout/ads_shimmer_native_large"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
