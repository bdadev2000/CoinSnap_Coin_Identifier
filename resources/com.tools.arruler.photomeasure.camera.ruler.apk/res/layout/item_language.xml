<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:tag="layout/item_language_0"
    android:background="@drawable/bg_item_language"
    android:paddingLeft="@dimen/_16sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingRight="@dimen/_16sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:paddingHorizontal="@dimen/_16sdp"
    android:paddingVertical="@dimen/_10sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvLanguage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_language"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_vietnamese"
            android:scaleType="centerCrop"
            android:scaleX="1.3"
            android:scaleY="1.3"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/black"
        android:id="@+id/tv_title_language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:fontFamily="@font/be_vietnam_pro_semi_bold"
        android:layout_marginHorizontal="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="@+id/cvLanguage"
        app:layout_constraintEnd_toStartOf="@+id/checkbox_language"
        app:layout_constraintStart_toEndOf="@+id/cvLanguage"
        app:layout_constraintTop_toTopOf="@+id/cvLanguage"/>
    <RadioButton
        android:theme="@style/RadioButtonMain"
        android:id="@+id/checkbox_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:button="@drawable/rb_selector"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title_language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title_language"/>
</androidx.constraintlayout.widget.ConstraintLayout>
