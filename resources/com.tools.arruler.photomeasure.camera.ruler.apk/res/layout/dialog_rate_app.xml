<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="layout/dialog_rate_app_0"
    android:background="@drawable/bg_dialog"
    android:padding="@dimen/_12sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="center"
        android:id="@+id/iv_rate"
        android:layout_width="wrap_content"
        android:layout_height="134dp"
        android:src="@drawable/ic_bg_rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/tv_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/do_you_like_our_app"
        android:fontFamily="@font/be_vietnam_pro_semi_bold"
        app:layout_constraintTop_toBottomOf="@+id/iv_rate"/>
    <TextView
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/tv_rate_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="@string/if_you_like_this_app"
        android:fontFamily="@font/be_vietnam_pro_medium"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_rate"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linear_star"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:weightSum="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_rate_details">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_start_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_active"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_start_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_active"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_start_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_active"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_start_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_active"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_start_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_active"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/color_B4B4B4"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_later"
        android:paddingLeft="@dimen/_24sdp"
        android:paddingRight="@dimen/_24sdp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/later"
        android:fontFamily="@font/be_vietnam_pro_medium"
        android:paddingHorizontal="@dimen/_24sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_star"/>
</androidx.constraintlayout.widget.ConstraintLayout>
